<item id="2850"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Mobile Upgrade Card</name> <!-- Change this card name -->
  	<campaignID>MobileUpgradeCard</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="Use Mobile Upgrade Card"> <!-- change tracking call -->
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="subtitle">
			<value>Poptropica</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Dragon Follower</value> <!-- Change this title -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundTeal.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/follower_flying_dragon</specialAbility>
	</specials>
</item>
