<item id="3103">
	<type>store</type>
	<subType>general</subType>

	<textfields>
			<text id="storeTitle">
					<value>Lightning Staff</value>
			</text>
			<text id="storeInstructions">
				<web>Tap space bar to unleash the power.</web>
				<mobile>Tap ACTION to unleash the power.</mobile>
			</text>
		</textfields>
	
	<assets>
		<asset id="cardBack" /><asset id="cardContent"/>
		</assets>
	
	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
				<label>PUT ON</label>
				<actions>
				<action type="applyLook">
				</action>
			</actions>
			</btn>
			<btn>
			<conditional id="hasLook" isTrue="true"/>
				<label>TAKE OFF</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
		</buttons>
	
	<looks>
		<look>
			<item>plightningstaff</item>
		</look> 
	</looks> 

	<conditionals>
		<conditional type="hasLook" />
	</conditionals>
</item>