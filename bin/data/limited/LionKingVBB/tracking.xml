<tracking>
	<track id="videoContainer">
		<choice>Video</choice> <!-- game code forces this to Video -->
		<subchoice>videoContainer</subchoice> <!-- game code will supply video container name as subchoice -->
	</track>
	<track id="lionboy">
		<event>EngagedOutsideNPC</event>
		<choice>boy</choice> <!-- *** npc name -->
		<triggerImpression>true</triggerImpression>
	</track>
	<track id="liongirl">
		<event>EngagedOutsideNPC</event>
		<choice>girl</choice> <!-- *** npc name -->
		<triggerImpression>true</triggerImpression>
	</track>
	<track id="poster">
		<event>ClickToSponsor</event>
		<choice>Poster</choice> <!-- game code forces this to Poster -->
		<subchoice>Outside Poster</subchoice>
		<triggerImpression>true</triggerImpression>
	</track>
</tracking>
