<item id="2834"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Braids Card</name> <!-- Change this card name -->
  	<campaignID>TangledQuest</campaignID> <!-- Change this CMS name -->
	
    <contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Braids Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Braids Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
	<radiobuttons> <!-- Change button colors -->
		<btn>
			<color>0x9B6FC6</color>
			<val>0</val>
			<x>-87</x>
			<y>29</y>
		</btn>
		<btn>
			<color>0xFF669C</color>
			<val>1</val>
			<x>-87</x>
			<y>89</y>
		</btn>
		<btn>
			<color>0x59B4E0</color>
			<val>2</val>
			<x>-87</x>
			<y>149</y>
		</btn>
	</radiobuttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Tangled</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Braids</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks> <!-- Set up the looks for each button -->
	    <look> <!-- Only list what you want to change -->
			<hair>limited_rapunzelhair1</hair>
		</look>
		<look>
			<hair>limited_rapunzelhair2</hair>
		</look>
		<look>
			<hair>limited_rapunzelhair3</hair>
		</look>
	</looks> 
	
</item>