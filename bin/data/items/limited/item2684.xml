<item id="2684"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Dragon Wings Card</name> <!-- Change this card name -->
  	<campaignID>WingsOfFireIC</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
		<btn>
  			<index>1</index>
				<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
					<action type="applyLook"  tracking="Use Dragon Wings Card"> 
				</action>
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
					<action type="removeLook"/>
			</actions>
  		</btn>		
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Dragon Wings Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Wings of Fire</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Dragon Wings</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" />
  	</assets>

	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	<looks>
	    <look> <!-- Only list what you want to change -->
			<pack>limited_wingsoffire</pack>
		</look>
	</looks> 
	
</item>