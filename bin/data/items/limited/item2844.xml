<item id="2844"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Surfer Transformer Card</name> <!-- Change this card name -->
  	<campaignID>LegoFriendsEC</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Surfer Transformer Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Surfer Transformer Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Lego Friends</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Surfer Transformer</value> <!-- Change this title -->
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to change others!</value>
			<y>66</y>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundYellow.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xd2aa72</skinColor>
			<hairColor>0xf5c455</hairColor>
			<eyeState>casual</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth>1</mouth> <!-- use frame label for numbers after 60 -->
			<hair>ad_pranks_kaz</hair>
			<shirt>limited_lego_friends_avatar_b</shirt>
			<pants>6</pants>
			<item>limited_surfboard_b</item>
		</look>
	</looks> 
    
</item>
