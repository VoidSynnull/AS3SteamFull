<item id="5263"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<buttons>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Baby Dr Hare Follower</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" />
	</assets>

	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
 	<specials>
		<specialAbility>pop_follower_baby_hare</specialAbility>	
	</specials>

</item>
