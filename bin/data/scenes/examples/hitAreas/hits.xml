<hits>
	<hit id="hazard" color="0xff00ff">
		<component type="hazard">
			<knockBackVelocity>
				<x>400</x>
				<y>400</y>
			</knockBackVelocity>
			<!-- for push back along x and y axis relative to point of impact, use 'true' for 'velocityByHitAngle' (top down, swimming, etc) -->
			<velocityByHitAngle>false</velocityByHitAngle>
		</component>
	</hit>
	<hit id="floor" color="0x00ff00" platform="true">
		<component type="platform"/>
	</hit>
	<hit id="ice" color="0xA8CFFF" platform="true">
		<component type="platform">
			<friction>
				<x>1.1</x>
				<y>0</y>
			</friction>
		</component>
	</hit>
	<hit id="bounce" color="0xff0000" platform="true">
		<component type="bounce">
			<velocity>
				<x>0</x>
				<y>-800</y>
			</velocity>
		</component>
	</hit>
	<hit id="wall" color="0xff6600">
		<component type="wall"/>
	</hit>
	<hit id="ceiling" color="0xffcc00">
		<component type="ceiling"/>
	</hit>
	<hit id="climb" color="0xffff00">
		<component type="climb"/>
	</hit>
	<hit id="climb1">
		<component type="climb"/>
	</hit>
	<hit id="water" color="0x0000ff">
		<!-- This causes a splash on the surface in a defined color range. -->
		<component type="water">
			<splashColor1>0xFF339900</splashColor1>
			<splashColor2>0x33ccff33</splashColor2>
			<density>1</density>
		</component>
		<!-- Define the physics of the water.  IF you don't add this component you'll get a splash with no effect on the players movement. -->
		<component type="mover">
			<acceleration>
				<x>0</x>
				<y>-12000</y>
			</acceleration>
			<friction>
				<x>500</x>
				<y>3000</y>
			</friction>
			<!-- If true, platforms have higher priority so you'll stick to them even in water. -->
			<stickToPlatforms>false</stickToPlatforms>
		</component>
		-->
	</hit>
	<hit id="waterDive" color="0x0000bb">
		<!-- This causes a splash on the surface in a defined color range. -->
		<component type="water">
			<splashColor1>0xFF339900</splashColor1>
			<splashColor2>0x33ccff33</splashColor2>
			<density>.78</density>	<!-- low density causes more WaterColliders to sink. -->
		</component>
		<component type="mover">
			<!-- If true, platforms have higher priority so you'll stick to them even in water. -->
			<stickToPlatforms>false</stickToPlatforms>
		</component>
		<!-- Define the physics of the water.  IF you don't add this component you'll get a splash with no effect on the players movement. -->
	</hit>
	<hit id="air" color="0x00eeff">
		<component type="mover">
			<acceleration>
				<x>0</x>
				<y>-1900</y>
			</acceleration>
			<friction>
				<x>500</x>
				<y>0</y>
			</friction>
			<stickToPlatforms>false</stickToPlatforms>
		</component>
	</hit>
	<hit id="hazHit">
		<component type="hazard">
			<knockBackVelocity>
				<x>1500</x>
				<y>400</y>
			</knockBackVelocity>
		</component>
	</hit>
</hits>