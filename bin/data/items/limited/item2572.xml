<item id="2572"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Infinity Mighty Power Card</name> <!-- Change this card name -->
  	<campaignID>DisneyInfinity2MVU</campaignID> <!-- Change this CMS name -->
	
   	<buttons>
  		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
				<action type="openPopup" tracking="Use Infinity Mighty Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="className">game.scenes.custom.CardAnimPower</param>
	  					<param id="swfPath">DisneyInfinity2MVU/heroanim.swf</param> <!-- location of swf in assets/limited -->

	  					<param id="alignDirection">false</param> <!-- optional set offset according to avatar direction -->
					</parameters>
				</action>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT SITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Infinity Mighty Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
  
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="adtitle">
			<value>Bring on</value> <!-- Change this subtitle -->
			<y>-210</y>
		</text>
		<text id="adtitle">
			<value>the Super Heroes</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
    <asset id="cardContent" />  <!--	 use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	

	


</item>
