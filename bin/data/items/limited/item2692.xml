<item id="2692"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Flying Monkey Costume Card</name> <!-- Change this card name -->
  	<campaignID>PopComicsFlyGameQuest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Flying Monkey Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Flying Monkey Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Poptropica Comics</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Flying Monkey Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xD0CAC8</skinColor>
			<hairColor>0xffcc99</hairColor>
			<eyeState>casual</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth>limited_shadycop</mouth> <!-- use frame label for numbers after 60 -->
			<marks>limited_comic_monkey1</marks>
			<facial>limited_comic_monkey1</facial>
			<overshirt>limited_comic_monkey1</overshirt>
		</look>
	</looks> 
    
</item>
