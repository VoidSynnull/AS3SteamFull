<item id="2965"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Milk Pep Milk Bottle Card</name> <!-- *** Change this card name -->
  	<campaignID>MilkPepQuest</campaignID> <!-- *** Change this CMS name -->
	<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true"/> 
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
  	<radiobuttons>
		<btn>
			<color>0xffffff</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0x996633</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0xffcccc</color>
			<val>2</val>
		</btn>
	</radiobuttons>
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>milk it!</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Milk Bottle</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Spacebar tap to drink.</web>
			<mobile>Press action button to drink.</mobile>
			<y>66</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<!-- <asset id="cardContent" /> Will use content bin/assets/items/limited/item9999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_milk_white</item>
		</look>
		<look> <!-- Only list what you want to change -->
			<item>limited_milk_chocolate</item>
		</look>
		<look> <!-- Only list what you want to change -->
			<item>limited_milk_strawberry</item>
		</look>
	</looks> 
</item>
