<item id="3148">
		<type>island</type>
		<subType>examples</subType>
		
		<contentClass>
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="clickableSpecial">true</param>
		</parameters>
	</contentClass>
 	
		<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>CREATE</label>
				<actions>
				<action type="activatePower">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>REMOVE</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
		
		<textfields>
	 	 	<text id="storeSubTitle">
				<value>Follower</value>
			</text>
			<text id="storeTitle">
				<value>Woodstock</value>
	 	 	</text>
		</textfields>
		<assets>
		<asset id="cardBack" />
			<asset id="cardContent"/>
		</assets>
		
 	<specials>
			<specialAbility>follower_woodstock</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
