<!-- set "Click through URL" field in CMS to campaign.xml if billboard awards cards -->
<campaign>
  	<campaignId>CampaignNameBillboard</campaignId> <!-- *** Must match campaign folder name -->
  	<version>2</version> <!-- version number that doesn't use steet paths (don't change) -->
	<lockVideo>true</lockVideo> <!-- overrides locked video flag in hotspots.xml -->
 	
  	<!-- click URLs by default, category, or id (only needed if billboard awards cards) -->
	<clickUrls>
		<clickUrl id="Default">http://www.google.com</clickUrl> <!-- Default clickURL -->
		<clickUrl id="Card">http://www.amazon.com</clickUrl> <!-- if needing different clickURL for cards -->
	</clickUrls>
	
	<!-- impressions when clicking (ClickToSponsor event) by category or id (usually only posters and popups) -->
	<impressionOnClicks>
		<impressions id="Poster">
			<impression type="standard">http://doubleclick.net?param=blank</impression>
			<impression type="moat">https://moat.com?param=blank</impression>
			<impression type="moatClass">MOAT-omddisneydcm415376975536</impression>
		</impressions>
	</impressionOnClicks>
	
	<!-- third-party impressions by event name -->
	<impressionUrls>
		<impressions id="AdImpression"> <!-- For exterior ad building appeaing on main street -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
			<impression type="moat">https://moat.com?param=blank</impression>
			<impression type="moatClass">MOAT-omddisneydcm415376975536</impression>
		</impressions>
		<impressions id="EngagedOutsideNPC"> <!-- For engaging NPC in front of ad building -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="VideoClicked"> <!-- For playing video -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="VideoReplayed"> <!-- For replaying video (usually same tag as for VideoClicked) -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="CardImpression"> <!-- When prize card appears when awarded or in inventory -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="NPCImpression"> <!-- When NPC appears in front of ad building or in interior (specify in tracking.xml) -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="PosterImpression"> <!-- For posters that look like posters (specify in tracking.xml) -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
	</impressionUrls>
	
</campaign>