<item id="fishingPole">
  	<type>island</type>
  	<subType>testIsland</subType>
  	
  	<contentClass>
		<className>game.scenes.testIsland.fishingTest.FishingPoleContentView</className>
	</contentClass>
  	
  	<textfields>
  		<text>
    		<value>Fishing Pole</value>
  		</text>
  		<text>
  			<conditional id="checkIfMobile" isTrue="false"></conditional>
      		<value>Press SPACEBAR to cast your line!</value>
    	</text>
    	<text>
  			<conditional id="checkIfMobile" isTrue="true"></conditional>
      		<value>Tap your POPTROPICAN to cast your line!</value>
    	</text>
  	</textfields>
  	
  	<assets>
  		<asset id="cardBack">
  			<assetPath>items/shared/SurvivalBackground.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-80</saturation>
     			<hue>149</hue>
    		</effect>
    	</asset>
   		<!-- <asset id="cardContent"/> -->
    </assets>

  	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"></conditional>
			<label>EQUIP</label>
    		<actions>
	    		<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"></conditional>
    		<label>REMOVE</label>
    		<actions>
	    		<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	
	<!-- <value>
		<conditional id="userField"/>
	</value> -->
	
	<conditionals>
		<!-- <conditional type="checkUserField">
			<parameters>
				<param id="userField">bait</param>
			</parameters>
		</conditional> -->
		<conditional type="hasLook"/>
		<conditional type="checkIfMobile">
			
		</conditional>
	</conditionals>
	
	<looks>
		<look>
			<item>fishing_pole</item>
		</look>
	</looks>
</item>