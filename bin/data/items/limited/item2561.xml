<item id="2561"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Eggs Costume Card</name> <!-- Change this card name -->
  	<campaignID>BoxtrollsMVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Eggs Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Eggs Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>The Boxtrolls</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Eggs Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<overshirt>ad_boxtrolls_eggs</overshirt>
			<hair>ad_boxtrolls_eggs</hair>
			<marks>ad_boxtrolls_eggs</marks>
			<pants>astrofarmer</pants>
		</look>
	</looks> 
    
</item>
