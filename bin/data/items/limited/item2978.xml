<item id="2978"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Ducky Follower Card</name> <!-- *** Change this card name -->
  	<campaignID>ToyStory4HEVBB</campaignID> <!-- *** Change this CMS name -->
  	
	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
	<radiobuttons>
		<btn>
			<y>30</y>
			<x>-90</x>
			<color>0xFFF21B</color>
			<val>limited/pop_follower_ducky</val>
		</btn>
		<btn>
			<y>80</y>
			<x>-90</x>
			<color>0x1ACCFF</color>
			<val>limited/pop_follower_bunny</val>
		</btn>
	</radiobuttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<y>-213</y>
			<value>Toy Story 4</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Ducky and Bunny Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
 		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Tap space bar for a surprise</web>
			<mobile>Press ACTION for a surprise</mobile>
			<y>64</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundYellow.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/pop_follower_ducky</specialAbility>
	</specials>
</item>
