<item id="2675"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Scholastic Summer 2015 Wishlist Card</name> <!-- Change this card name -->
  	<campaignID>ScholasticSummer2015Wishlist</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>0</index>
    		<label>GRAB & PRINT</label>
   			<actions>
				<action type="openPopup" tracking="Use Scholastic Summer 2015 Wishlist Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="className">game.scenes.custom.WishlistPopup</param>
	  					<param id="swfPath">ScholasticSummer2015Wishlist/wishlist.swf</param> <!-- location of swf in assets/limited -->
						<param id="saveToggleButtons">true</param>
						<param id="trackToggleButtons">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
    	<btn>
    		<index>1</index>
      		<label>PLAY GAMES</label>
      		<actions>
				<action type="gotoUrl" tracking="Scholastic Summer 2015 Wishlist Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url3</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Scholastic</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Summer Wish List</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" />
  	</assets>
    
</item>
