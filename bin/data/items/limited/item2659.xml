<item id="2659"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Awesome Sauce Card</name> <!-- Change this card name -->
  	<campaignID>ScholasticAwesomeSauceIC</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
			<action type="openPopup" tracking="Use Awesome Sauce Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="className">game.scenes.custom.CardAnimPower</param>
	  					<param id="swfPath">limited/ScholasticAwesomeSauceIC/ThoughtBubble.swf</param> <!-- location of swf in assets/limited -->
					</parameters>
				</action>			
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>PLAY GAME</label>
      		<actions>
				<action type="gotoUrl" tracking="Awesome Sauce Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value></value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value></value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
</item>