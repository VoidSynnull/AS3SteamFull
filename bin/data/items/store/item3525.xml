<item id="3525">
		<type>store</type>
		<subType>general</subType>
		<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>INFLATE</label>
				<actions>
				<action type="activatePower" tracking="Use 9th Birthday Card">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
		<textfields>
			<text id="storeTitle">
				<value>Birthday Balloon</value>
			</text>
		<text id="storeInstructions">
				<value>Celebrate Poptropica's 9th birthday with this balloon!</value>
				
			</text>
	</textfields>
		<assets>
		<asset id="cardBack" />
		<asset id="cardContent"/>
		</assets>
		
		<specials>
			<specialAbility>balloon_birthday_9th</specialAbility>
		</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
</item>