<item id="5293"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="scale">0.6</param>
			<param id="forceScale">true</param>
		</parameters>
		<y>-25</y>
	</contentClass>
	
  <buttons>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeTitle">
			<value>Charming Winter Boots</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
 	<specials>
		<specialAbility>shoes_winter_boots</specialAbility>	
	</specials>


</item>
