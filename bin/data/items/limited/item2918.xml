    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>LEGO® Star Wars™</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Starfighter Suit</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to use the power!</value>
			<mobile>Press action button to use the power!</mobile>
			<y>66</y>
		</text>
		<text id="copyright">
			<value>© Sponsor.</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
    	<!-- <asset id="cardContent" /> -->
  	</assets>
  	
  	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_legostarwars_starfighter</facial>
			<item>limited_legostarwars_starfighter</item>
			<overshirt>limited_legostarwars_starfighter</overshirt>
			<overpants>limited_legostarwars_starfighter</overpants>
		</look>
	</looks> 
    
