<item id="2616"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Snapshot Costume Card</name> <!-- Change this card name -->
  	<campaignID>SkylandersTrapTeamWeek1MobileMVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Snapshot Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Snapshot Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Skylanders</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Snap Shot Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0x00aab1</skinColor>
			<hairColor>0x000000</hairColor>
			<eyeState>open</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<facial>limited_skylander</facial>
			<shirt>limited_skylander</shirt>
			<pack>limited_skylander</pack>
			<item>limited_skylander</item>
			<overshirt>limited_skylander</overshirt>
			<pants>1</pants>
			
		</look>
	</looks> 
    
</item>
