<item id="3339">
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>

	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
				<label>Wear It</label>
				<actions>
				<action type="applyLook"/>
			</actions>
			</btn>
			<btn>
			<conditional id="hasLook" isTrue="true"/>
				<label>TAKE OFF</label>
				<actions>
				<action type="removeLook"/>
			</actions>	
			</btn>
		</buttons>
	<textfields>
		<text id="storeSubTitle">
			<value>Poptropica's!</value>
			</text>
		<text id="storeTitle">
			<value>6th Birthday!</value>
			</text>
	</textfields>
	<assets>
		<asset id="cardBack" /><asset id="cardContent"/>
		</assets>
		
		<looks>
			<look>
			<mouth>youngsherpa</mouth>
			<hair>p_6birthday_boy</hair>
			<overshirt>p_5birthday</overshirt>
			<item>ppopcake5</item>
			<pants>1</pants>
		</look>
	</looks> 

		<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
</item>
