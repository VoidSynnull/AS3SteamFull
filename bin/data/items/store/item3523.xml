<item id="3523">
	<type>store</type>
	<subType>general</subType>
	<buttons>
			<btn>
				<conditional id="hasAbility" isTrue="false"/>
					<label>Turn On</label>
					<actions>
				<action type="activatePower">
					<parameters>
							<param id="trigger">true</param>
					</parameters>
				</action>
				</actions>
			</btn>
			<btn>
			<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
		</btn>
		</buttons>
	<textfields>
			<text id="storeTitle">
			<value>White Out</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar to activate a Blizzard.</web>
			<mobile>Tap ACTION to activate a Blizzard.</mobile>
		</text>
	</textfields>
	<assets>
		<asset id="cardBack" />
			<asset id="cardContent"/>
		</assets>
		
		<specials>
			<specialAbility>white_out</specialAbility>
		</specials>
		
	<conditionals>
			<conditional type="hasAbility"/>
		</conditionals> 
</item>
