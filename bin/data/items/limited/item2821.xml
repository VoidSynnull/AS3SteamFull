<item id="2821">
<!--  Change this card ID  -->
	<type>custom</type>
	<subType>general</subType>
	<name>Crazy Kakamora Card</name>
	<!--  Change this card name  -->
	<campaignID>LegoDisneyPrincessMVU</campaignID>
	<!--  Change this CMS name  -->
	<buttons>
		<btn>
			<index>1</index>
			<label>USE</label>
			<actions>
			<action type="applyLook" tracking="Use Crazy Kakamora Card"/>
			<!--  change tracking call  -->
			</actions>
		</btn>
		<btn>
			<index>1</index>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
			<action type="removeLook"/>
			</actions>
		</btn>
		<btn>
			<index>0</index>
			<label>VISIT SITE</label>
			<actions>
			<action type="gotoUrl" tracking="Crazy Kakamora Card">
			<!--  change tracking call  -->
			<parameters>
			<param id="urlId">url1</param>
			<!--  NOTE :: This should get pulled from campaign.xml  -->
			</parameters>
			</action>
			</actions>
		</btn>
	</buttons>
	
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Lego Disney Princess: Moana</value>
		<!--  Change this subtitle  -->
		</text>
		<text id="adtitle">
			<value>Crazy Kakamora</value>
		<!--  Change this title  -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
	</textfields>
	
	<assets>
	<asset id="cardBack">
		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath>
	<!--  Change this background swf  -->
	</asset>
		<asset id="cardContent"/>
	<!--
	 Will use content bin/assets/items/limited/item999.swf 
	-->
	</assets>
	<looks>
		<look>
		<!--  Only list what you want to change  -->
			<item>limited_kakamora</item>
		</look>
	</looks>
</item>