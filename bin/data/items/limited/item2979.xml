<item id="2979"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Polly Shrink Card</name> <!-- *** Change this card name -->
  	<campaignID>PollyPocketQuest</campaignID> <!-- *** Change this CMS name -->
	
	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
		<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Polly Pocket</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Polly Shrink Power</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Tap space bar to shrink!</web>
			<mobile>Press action button to shrink!</mobile>
			<y>66</y>
		</text>
  	</textfields>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPink.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<!-- <asset id="cardContent" />  -->
  	</assets>
  	
  	<looks>
	    <look>
			<overshirt>limited_pollypocket_amulet</overshirt>
		</look>
	</looks> 
    
</item>
