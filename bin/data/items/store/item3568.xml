<item id="3568"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
		<campaignID>MemberGift</campaignID>
	
		<buttons>
			<btn>
				<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
				<label>USE</label>
				<actions>
				<action type="applyLook" tracking="Raspberry Toss"/>
			</actions>
			</btn>
			<btn>
				<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
				<label>PUT AWAY</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
		</buttons>
	
		<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Raspberry Toss</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar to toss&#10;raspberry at others.</web>
			<mobile>Tap ACTION to to toss&#10;raspberry at others.</mobile>
		</text>
		</textfields>
	
		<assets>
		<asset id="cardBack" /><asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
		</assets>
		
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<item>limited_rasberry</item>
		</look>
	</looks> 
</item>
