<item id="2721"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>View Master Power Card</name> <!-- Change this card name -->
  	<campaignID>ViewMasterQuest</campaignID> <!-- Change this CMS name -->
	
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use View Master Power Card" /> <!-- change tracking call -->
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
		<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="View Master Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>View-Master</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Power</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" />
  	</assets>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_viewmaster_p</item>

		</look>
	</looks> 
    
</item>
