<item id="3590"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
		<campaignID>MemberGift</campaignID>
	
		<contentClass> <!-- This displays avatar -->
			<className>game.ui.card.CharacterContentView</className>
		</contentClass>
	
		<buttons>
			<btn>
				<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
				<label>USE</label>
				<actions>
				<action type="applyLook" tracking="Snowball Toss"/>
			</actions>
			</btn>
			<btn>
				<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
				<label>PUT AWAY</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
		</buttons>
	
		<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Snowball Toss</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar to toss snowballs</web>
			<mobile>Tap ACTION to toss snowballs</mobile>
		</text>
		</textfields>
	
		<assets>
			<asset id="cardBack" />
		</assets>
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<item>big_snowball</item>
		</look>
	</looks> 
</item>
