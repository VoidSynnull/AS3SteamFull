<item id="2599"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Bazooka Game Card</name> <!-- Change this card name -->
  	<campaignID>DOWKLongHaulQuest</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>PLAY GAME</label>
    		<actions>
				<action type="openPopup" tracking="Use Bazooka Game Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="className">game.scenes.custom.TargetShootingGamePower</param>
	  					<param id="swfPath">DOWKLongHaulQuest/BazookaGame.swf</param> <!-- location of swf in assets/limited -->
					</parameters>
				</action>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Bazooka Game Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Diary of a Wimpy Kid</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Bazooka Game</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
  	</assets>
  	
</item>
