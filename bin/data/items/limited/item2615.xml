<item id="2615"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Giant Pickaxe Card</name> <!-- Change this card name -->
  	<campaignID>CaptToadMobileMVU</campaignID> <!-- Change this CMS name -->
	
  		<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"  tracking="Use Giant Pickaxe Card"> <!-- change tracking call -->
	  				
				
				</action>
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
					<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Giant Pickaxe Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Captain Toad</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Giant Pickaxe</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
		<text id="adsubtitle"> <!-- Change any member instructions -->
			<value></value>
			<y>24</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background swf -->
    	</asset>
        <asset id="cardContent" />
  	</assets>
  		<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_capttoad_pickaxe</item>
		</look>
	</looks> 
	  
	

</item>
