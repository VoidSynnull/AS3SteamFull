<item id="5235"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>USE</label>
				<actions>
				<action type="activatePower">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
	<textfields>
		<text id="storeTitle">
			<value>Witch's Broom Rider</value>
		 </text>
		 <text id="storeInstructions">
			<web>Soar through Poptropica!</web>
			<mobile>Soar through Poptropica!</mobile>
		</text>
	</textfields>
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent"/>
	</assets>
		
	<specials>
		<specialAbility>witch_broom</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
