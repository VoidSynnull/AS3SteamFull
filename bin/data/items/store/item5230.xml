<item id="5230"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
			<parameters>
				<param id="hidePlayer">true</param>
			</parameters>
			<x>100</x>
			<y>0</y>
	</contentClass>
	
	<radiobuttons>
		<btn>
			<color>0x986A56</color>
			<val>pop_follower_mandyscreams</val>
		</btn>
		<btn>
			<color>0xFFF8D7</color>
			<val>pop_follower_bopbop</val>
		</btn>
		<btn>
			<color>0xFFAAC0</color>
			<val>pop_follower_tortapiccola</val>
		</btn>
	</radiobuttons>
	
	<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>FOLLOW</label>
				<actions>
				<action type="activatePower">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
	<textfields>
		<text id="storeTitle">
			<value>Reality TV Star Follower</value>
		 </text>
	</textfields>
	<assets>
			<asset id="cardBack" />
		</assets>
		
	<specials>
		<specialAbility>pop_follower_mandyscreams</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
