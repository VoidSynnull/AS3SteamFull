<item id="2444"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Monsters High Genie Power Card</name> <!-- Change this card name -->
  	<campaignID>MH13WishesQuest</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Monsters High Genie Power Card" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Monsters High Genie Power Card">
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
		  <value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
		  <value>Monster High</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
		  <value>Genie Power</value> <!-- Change this title -->
		</text>
		<text id="ad">
		  <value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>ad_mh13wishes_lamp</item>
		</look>
	</looks> 
</item>
