<hits>
	<hit id="floor" color="0x00ff00" platform="true">
		<component type="platform"/>
	</hit>
	<hit id="ice" color="0xA8CFFF" platform="true">
		<component type="platform">
			<friction>
				<x>1.1</x>
				<y>0</y>
			</friction>
		</component>
	</hit>
	<hit id="bounce" color="0xff0000" platform="true">
		<component type="bounce">
			<velocity>
				<x>0</x>
				<y>-250</y>
			</velocity>
		</component>
	</hit>
	<hit id="wall" color="0xff6600">
		<component type="wall"/>
	</hit>
	<hit id="ceiling" color="0xffcc00">
		<component type="ceiling"/>
	</hit>
	<hit id="climb" color="0xffff00">
		<component type="climb"/>
	</hit>
	<hit id="water" color="0x0000ff">
		<component type="water">
			<splashColor1>0xFF339900</splashColor1>
			<splashColor2>0x33ccff33</splashColor2>
		</component>
		<!-- Define the physics of the water. -->
		<component type="mover">
			<acceleration>
				<x>-2000</x>
				<y>-12000</y>
			</acceleration>
			<friction>
				<x>100</x>
				<y>3000</y>
			</friction>
			<!-- IF true, platforms have higher priority so you'll stick to them even in water. -->
			<stickToPlatforms>false</stickToPlatforms>
		</component>
	</hit>
	<hit id="airDiagonalJet" color="0x00eeff">
		<component type="mover">
			<acceleration>
				<x>3200</x>
				<y>-3600</y>
			</acceleration>
			<friction>
				<x>1700</x>
				<y>1700</y>
			</friction>
			<stickToPlatforms>false</stickToPlatforms>
		</component>
	</hit>
	<hit id="airDiagonalJet2" color="0x99ff66">
		<component type="mover">
			<acceleration>
				<x>1900</x>
				<y>-1900</y>
			</acceleration>
			<friction>
				<x>1700</x>
				<y>1700</y>
			</friction>
			<stickToPlatforms>false</stickToPlatforms>
		</component>
	</hit>
	<hit id="conveyerBelt" color="0xff00ff" platform="true">
		<component type="platform"/>
		<component type="mover">
			<velocity>
				<x>-400</x>
				<y>0</y>
			</velocity>
		</component>
	</hit>	
	<hit id="air" color="0x00ffcc">
		<component type="mover">
			<acceleration>
				<x>0</x>
				<y>-1500</y>
			</acceleration>
			<friction>
				<x>400</x>
				<y>400</y>
			</friction>
			<stickToPlatforms>false</stickToPlatforms>
		</component>
	</hit>
	<hit id="cave" color="0x6515ff">
		<component type="radial" rebound="-.9"/>
	</hit>
	<hit id="movingBouncer" platform="true">
		<component type="bounce">
			<velocity>
				<x>0</x>
				<y>-250</y>
			</velocity>
		</component>
		<component type="movingHit">
			<!-- set the velocity (distance over one second) -->
			<velocity>120</velocity>
			<!-- add as many points as needed -->
			<points>
				<point>
					<x>500</x>
					<y>487</y>
				</point>
				<point>
					<x>700</x>
					<y>487</y>
				</point>
			</points>
		</component>
	</hit>
</hits>