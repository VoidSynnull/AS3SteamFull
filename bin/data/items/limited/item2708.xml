<item id="2708"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Ben Franklin Power Card</name> <!-- Change this card name -->
  	<campaignID>BenFranklinPowerIC</campaignID> <!-- Change this CMS name -->
	

	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Ben Franklin Power Card"> <!-- change tracking call -->
				</action>
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
					<action type="removeLook"/>
			</actions>
  		</btn>		
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Ben Franklin Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  		<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Ben Franklin Huge Pain In My...</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Ben Franklin Power</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		  <asset id="cardContent" />  
	</assets>

	<looks>
		<look>
			<facial>limited_franklin_trigger</facial>
		</look>
	</looks>
    
 	
</item>
