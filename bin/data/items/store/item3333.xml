<item id="3333">
	<type>store</type>
	<subType>general</subType>
	<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>FOLLOW</label>
				<actions>
				<action type="activatePower">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
	<textfields>
		<text id="storeSubTitle">
			<value>Virus Hunter Island</value>
			</text>
		<text id="storeTitle">
			<value>Ship Follower</value>
			</text>
	</textfields>
	<assets>
		<asset id="cardBack" /><asset id="cardContent"/>
		</assets>
		
		<specials>
		<specialAbility>follower_ship</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
