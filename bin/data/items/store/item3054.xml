<item id="3054">
	<type>store</type>
	<subType>general</subType>
				<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>


	<buttons>
		<btn>
			<label>COSTUMIZE</label>
			<actions>
				<action type="costumize"/>
			</actions>
		</btn>
		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	
	<textfields>
			<text id="storeTitle2">
			<value>Flower Power!</value>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
	
	<looks>
		<look>
			<item>flowerpower</item>
			<marks>pdaisy</marks>
			<pants>pdaisy</pants>
			<shirt>pdaisy</shirt>
		</look>
	 </looks>
	 
	 
	 <conditionals>
		<conditional type="hasLook" />
	 </conditionals>
</item>