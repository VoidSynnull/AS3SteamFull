<item id="tribe_specific_card"> <!-- Make sure the id name is the same as your .xml and the .swf art you want to load on the card -->
  	<type>island</type>
  	<subType>examples</subType> <!-- Set subType to the location of card .swf art - bin/assets/items/"folder" -->
  	
	<contentClass>
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
	<textfields>
   	 	<text>
      		<value>Tribe Specific Item</value>
   	 	</text>
  	</textfields>
	
	<assets>
  		<asset id="cardBack">
		<!-- Instead of the "shared" folder, you can also put the island card "background.swf" art inside the island folder you are using for all the other cards. EX - "items/"island_name"/background.swf" -->
			<assetPath>items/shared/EarlyBackground.swf</assetPath>
			<!-- These effect settings change the color of the background card, you get the numbers from Flash's "Adjust Color" filter -->
			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>36</brightness>
     			<contrast>-17</contrast>
     			<saturation>9</saturation>
     			<hue>12</hue>
    		</effect>
	    	</asset>
    </assets>
	
  	<buttons>
	    	<btn>
	      	<label>COSTUMIZE</label>
	      	<actions>
		  		<action type="costumize"/>
		  	</actions>
	    	</btn>
  	</buttons>
  	
  	<value>
  		<conditional id="checkTribe"/>
  	</value>

 	<conditionals>
	    	<conditional type="checkTribe"/>
    </conditionals>

  	<looks>
		<look id="yellow">
			<shirt>pg_jersey_yellowj</shirt>
			<pants>pg_jersey_yellowj</pants>
		</look>
		<look id="path">
			<shirt>pg_jersey_path</shirt>
			<pants>pg_jersey_path</pants>
		</look>
		<look  id="night">
			<shirt>pg_jersey_night</shirt>
			<pants>pg_jersey_night</pants>
		</look>
		<look id="flags">
			<shirt>pg_jersey_flags</shirt>
			<pants>pg_jersey_flags</pants>
		</look>
		<look id="wildfire">
			<shirt>pg_jersey_wildfire</shirt>
			<pants>pg_jersey_wildfire</pants>
		</look>
		<look id="nanobots">
			<shirt>pg_jersey_nanobots</shirt>
			<pants>pg_jersey_nanobots</pants>
		</look>
		<look id="squid">
			<shirt>pg_jersey_squid</shirt>
			<pants>pg_jersey_squid</pants>
		</look>
		<look id="seraphim">
			<shirt>pg_jersey_seraphins</shirt>
			<pants>pg_jersey_seraphins</pants>
		</look>
	</looks>

</item>