<item id="2531"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Hiccup Shield Card</name> <!-- Change this card name -->
  	<campaignID>DragonDefendersofBerk2MVU</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Hiccup Shield Card" /> <!-- change tracking call -->
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Hiccup Shield Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Dragons: Defenders of Berk 2</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Hiccup's Shield</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="adsubtitle"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to deflect fire!</value>
			<y>24</y>
		</text>
		<text id="copyright">
			<value>©2014 DreamWorks Animation LLC.</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>ad_dragonsberk2_shield</item>
		</look>
	</looks> 
</item>
