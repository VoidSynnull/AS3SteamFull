<item id="5215"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
  	<campaignID>MemberGift</campaignID>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
				<param id="scale">.6</param>
			</parameters>
			<y>-30</y>
	</contentClass>
	
  <buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Blossom Power"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Blossom Power</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
				<value>Press SPACEBAR to bloom!</value>
			<y>105</y>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>

	<looks>
		<look> <!-- Only list what you want to change -->
			<item>blossompower</item>
		</look>
	</looks>

</item>
