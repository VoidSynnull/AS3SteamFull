<item id="5240"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<buttons>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeTitle">
			<value>Flying Sleigh</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Soar the skies!</web>
			<mobile>Soar the skies!</mobile>
			<y>108</y>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" />
	</assets>

	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
 	<specials>
		<specialAbility>flying_sleigh</specialAbility>	
	</specials>

</item>
