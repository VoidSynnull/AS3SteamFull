<item id="2550"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Dusty Cap Card</name> <!-- Change this card name -->
  	<campaignID>PlanesFireAndRescueQuest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Dusty Cap Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>WATCH TRAILER</label>
      		<actions>
				<action type="gotoUrl" tracking="Dusty Cap Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url2</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Disney's Planes: Fire and Rescue</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Dusty Cap</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
		<text id="copyright">
			<value></value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRedOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<facial>ad_planes2_hat</facial>
		</look>
	</looks> 
    
</item>
