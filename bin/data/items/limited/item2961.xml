		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value>© & ™ DC & WBEI.(s19)</value> <!-- Change or delete this copyright -->
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_wonderwoman</facial>
			<hair>limited_wonderwoman</hair>
			<shirt>limited_wonderwoman</shirt>
			<pants>limited_wonderwoman</pants>
			<item>limited_dc_lasso</item>
		</look>
	</looks> 
