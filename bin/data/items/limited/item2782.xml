<item id="2782"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Wimpy Promo Card</name> <!-- Change this card name -->
  	<campaignID>WimpyPromoIC</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>Wear Shirt</label>
    		<actions>
				<action type="applyLook" tracking="Use Wimpy Promo Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>Play Wimpy</label>
      		<actions>
				<action type="gotoUrl" tracking="Wimpy Promo Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<shirt>sponsorwimpy1</shirt>
		</look>
	</looks> 
</item>
