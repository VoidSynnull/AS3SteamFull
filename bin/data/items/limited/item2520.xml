<item id="2520"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Terrible Terror Follower</name> <!-- Change this card name -->
  	<campaignID>DragonsDefendersOfBerkMVU</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="Use Terrible Follower Card"> <!-- change tracking call -->
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Use Terrible Follower Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url2</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Dragons: Defenders of Berk</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Terrible Terror Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value>Â©2014 DWA LLC</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/follower_dragons_defenders</specialAbility>
	</specials>
</item>
