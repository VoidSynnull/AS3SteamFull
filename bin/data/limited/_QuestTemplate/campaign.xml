<!-- this file gets pulled down from the server for any campaign with cards -->
<!-- set "Click through URL" field in CMS to campaign.xml to support handling of cards -->
<!-- MMQ, MMSQ and MBBQ campaigns will refer to this file instead of a campaign.xml file in the own folders -->
<campaign>
  	<campaignId>CampaignNameQuest</campaignId> <!-- *** Must match campaign folder name -->
  	<version>2</version> <!-- version number that doesn't use steet paths -->
	<lockVideo>true</lockVideo> <!-- overrides locked video flag in hotspots.xml -->
 	
  	<!-- click URLs by default, category, or id -->
	<clickUrls>
		<clickUrl id="Default">http://www.google.com</clickUrl> <!-- Default clickURL as catch-all (use ad building clickURL)-->
		<clickUrl id="Video">http://www.google.com</clickUrl> <!-- for clicking on visit sponsor button on video end screen -->
		<clickUrl id="Poster">http://www.google.com</clickUrl> <!-- for clicking on posters that take user to sponsor site -->
		<clickUrl id="Card">http://www.google.com</clickUrl> <!-- for clicking on visit sponsor button on cards -->
		<clickUrl id="Start">http://www.google.com</clickUrl> <!-- for clicking on sponsor banner on start popup -->
		<clickUrl id="Win">http://www.google.com</clickUrl> <!-- for clicking on sponsor banner on win popup -->
		<clickUrl id="Lose">http://www.google.com</clickUrl> <!-- for clicking on sponsor banner on lose popup -->
		<clickUrl id="Info">http://www.google.com</clickUrl> <!-- for clicking on sponsor banner on info/synopsis popup -->
	</clickUrls>
	
	<!-- third-party impressions by event name -->
	<impressionUrls>
		<impressions id="AdImpression"> <!-- For exterior ad building appeaing on main street -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
			<impression type="moat">https://moat.com?param=blank</impression>
			<impression type="moatClass">MOAT-omddisneydcm415376975536</impression>
		</impressions>
		<impressions id="VideoClicked"> <!-- For playing video -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="VideoReplayed"> <!-- For replaying video (usually same tag as for VideoClicked) -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="NPCImpression"> <!-- When NPC appears in front of ad building or in interior (specify in tracking.xml) -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="PosterImpression"> <!-- For posters that look like posters (specify in tracking.xml) -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="CardImpression"> <!-- When prize card appears when awarded or in inventory -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="StartBannerImpression"> <!-- for start popup appearing -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="WinBannerImpression"> <!-- for win popup appearing -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
		<impressions id="LoseBannerImpression"> <!-- for lose popup appearing -->
			<impression type="standard">http://doubleclick.net?param=blank</impression>
		</impressions>
	</impressionUrls>
	
	<!-- used for AS3 win popups -->
	<boycards>
		<card>9999</card>
		<card>9999</card>
	</boycards>
	<girlcards>
		<card>9999</card>
		<card>9999</card>
	</girlcards>
</campaign>