<item id="3650"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
			<parameters>
				<param id="scale">0.6</param>
			</parameters>
	</contentClass>
	
  <buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeTitle">
			<value>Marshmallow Roaster</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar to roast</web>
			<mobile>Tap ACTION to roast</mobile>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>

	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<looks>
		<look> <!-- Only list what you want to change -->
			<item>june_marshmallowstick</item>
		</look>
	</looks>

</item>
