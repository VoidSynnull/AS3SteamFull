<item id="5211"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
  	<campaignID>MemberGift</campaignID>
	
  	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Pie Day"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Pie Day</value>
		</text>
		<text id="storeInstructions"> <!-- Change any member instructions -->
			<web>Tap space bar to&#10;toss blueberry pie</web>
			<mobile>Tap ACTION to&#10;toss blueberry pie</mobile>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>blueberry_pie</item>
		</look>
	</looks> 
</item>
