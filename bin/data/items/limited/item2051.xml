<item id="2051"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>SpaceJamTransporterPower</name> <!-- *** Change this card name -->
  	<campaignID>SpaceJamAutoCard</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
				<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
					<action type="applyLook" tracking="true" />
				</actions>
  		</btn>
			<btn>
				<index>1</index>
				<conditional id="hasLook" isTrue="true"/>
				<label>PUT AWAY</label>
				<actions>
					<action type="removeLook"/>
				</actions>
			</btn>
    	<btn>
    		<index>0</index>
				<label>VISIT WEBSITE</label>
				<actions>
					<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Space Jam: A New Legacy</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Transporter</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Tap space bar to transport!</web>
			<mobile>Press action button to transport!</mobile>
			<y>66</y>
		</text>
		<text id="copyright">
			<value>© 2021 McDonald's  © 2021 WBEI. RATED PG</value> <!-- Change or delete this copyright <value>© 2021 McDonald’s. © 2021 WBEI</value> -->
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack">
			<assetPath>items/limited/backs/AdBackgroundOrange.swf</assetPath> <!-- Change this background zip -->
		</asset>
		<asset id="cardContent" />
	</assets>
  	
	<conditionals>
		<conditional type="hasLook" />
	</conditionals>
    
	<looks>
		<look>
			<item>limited_space_jam_transporter</item>
		</look>
	</looks> 
</item>
