<item id="3723"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="scale">0.6</param>
			<param id="forceScale">true</param>
		</parameters>
		<y>-30</y>
	</contentClass>
	
	
	
	<radiobuttons>
		<btn>
			<color>0x1C71FB</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xE64233</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0x29CA64</color>
			<val>2</val>
		</btn>
	</radiobuttons>
  <buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeTitle">
			<value>RC Carts</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Press SPACEBAR to drive!</web>
			<mobile>Press action button to drive!</mobile>
			<y>108</y>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>

	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<looks>
		<look> <!-- Only list what you want to change -->
			<item>store_rccar1</item>
		</look>
		<look> <!-- Only list what you want to change -->
			<item>store_rccar2</item>
		</look>
		<look> <!-- Only list what you want to change -->
			<item>store_rccar3</item>
		</look>
	</looks>

</item>
