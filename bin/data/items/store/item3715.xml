<item id="3715"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeTitle">
			<value>Fox Mug</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<looks>
		<look>
			<item>mug_fox</item>
		</look>
	</looks>

</item>
