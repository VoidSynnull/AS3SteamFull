<item id="6003"> <!-- Change this card ID -->
  	<type>pets</type>
	<subType>general</subType>
	
     <contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  		<parameters>
			<param id="pet">true</param>
		</parameters>
 	</contentClass>
	
 	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE PET</label>
    		<actions>
				<action type="activatePower"> <!-- change tracking call -->
					<parameters>
				  		<param id="trigger">true</param>
					</parameters>
				</action>
				<action type="track"> <!-- change tracking call -->
					<parameters>
				  		<param id="eventtype">EquipPet</param>
				  		<param id="choice">Bunny</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY PET</label>
    		<actions>
				<action type="deactivatePower"/>
				<action type="track"> <!-- change tracking call -->
					<parameters>
				  		<param id="eventtype">UnEquipPet</param>
				  		<param id="choice">Bunny</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Members-Only Pet</value>
		</text>
		<text id="storeTitle">
			<value>Bunny</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack"/>
  	</assets>
   	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
   	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xF7B0CD</skinColor>
			<mouth>bunny</mouth>
			<head>bunny</head>
			<body>bunny</body>
			<marks>bunny_ears</marks>
			<tail>bunny</tail>
			<paw1>bunny</paw1>
			<paw2>bunny</paw2>
			<paw3>bunny</paw3>
			<paw4>bunny</paw4>
			<calf1>bunny_front</calf1>
			<calf2>bunny_front</calf2>
			<calf3>bunny_back</calf3>
			<calf4>bunny_back</calf4>
			<thigh1>bunny_front</thigh1>
			<thigh2>bunny_front</thigh2>
			<thigh3>bunny_back</thigh3>
			<thigh4>bunny_back</thigh4>
			<facial>empty</facial>
			<hair>empty</hair>
			<eyes>eyes</eyes>
			<overbody>empty</overbody>
		</look>
	</looks> 

    <specials>
		<specialAbility>pets/pop_follower_bunny</specialAbility>
	</specials>
</item>
