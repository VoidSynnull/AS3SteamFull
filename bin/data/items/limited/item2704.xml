<item id="2704"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Captain Underpants Transform Card</name> <!-- Change this card name -->
  	<campaignID>CaptUndTransformIC</campaignID> <!-- Change this CMS name -->
	

	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>WEAR CAPE!</label>
    		<actions>
				<action type="applyLook" tracking="Use Captain Underpants Transform Card"> <!-- change tracking call -->
				</action>
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
					<action type="removeLook"/>
			</actions>
  		</btn>		
    	<btn>
    		<index>0</index>
      		<label>MAKE YOUR COMIC!</label>
      		<actions>
				<action type="gotoUrl" tracking="Captain Underpants Transform Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="adtitle">
			<value>Super Hero Cape</value> <!-- Change this title -->
			<y>-165</y>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
		
  	</textfields>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBrightBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		  <asset id="cardContent" />  
	</assets>

	<looks>
		<look>
			<pack>limited_captain_underpants</pack>
		</look>
	</looks>
    
 	
</item>
