<item id="3592"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
		<campaignID>MemberGift</campaignID>
	
		<contentClass> <!-- This displays avatar -->
			<className>game.ui.card.CharacterContentView</className>
		</contentClass>
	
		<buttons>
			<btn>
				<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
				<label>USE</label>
				<actions>
				<action type="applyLook" tracking="Rudolph Nose"/>
			</actions>
			</btn>
			<btn>
				<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
				<label>PUT AWAY</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
		</buttons>
	
		<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Rudolph Nose</value>
		</text>
		</textfields>
	
		<assets>
			<asset id="cardBack" />
		</assets>
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<facial>rudolph_nose</facial>
		</look>
	</looks> 
</item>
