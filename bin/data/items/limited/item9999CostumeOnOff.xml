<item id="9999"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>NameOfCard</name> <!-- *** Change this card name -->
  	<campaignID>Campaign CMS Name</campaignID> <!-- *** Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Campaign Name</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Special Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value>Â© Sponsor.</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xB77E48</skinColor>
			<hairColor>0x4A2C17</hairColor>
			<eyeState>open</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth></mouth> <!-- use frame label for numbers after 60 -->
			<marks></marks>
			<facial></facial>
			<hair></hair>
			<shirt></shirt>
			<pants></pants>
			<pack></pack>
			<item></item>
			<overshirt></overshirt>
			<overpants></overpants>
		</look>
	</looks> 
</item>
