<item id="2450"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Little Mermaid Sebastian Follower Card</name> <!-- Change this card name -->
  	<campaignID>DisneyMermaidQuest</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="Use Little Mermaid Sebastian Follower Card">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Little Mermaid Sebastian Follower Card">
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
		  <value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
		  <value>The Little Mermaid Diamond</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
		  <value>Sebastian Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
		  <value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
		  <value>Click Sebastian to see him sing!</value>
		  <y>62</y>
		</text>
		<text id="copyright">
			<value>Â©Disney</value>
			<y>146</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundTeal.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/follower_sebastian</specialAbility>
	</specials>
</item>