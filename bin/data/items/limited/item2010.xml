<item id="2010">
		<type>custom</type>
		<subType>general</subType>
		<name>GHD MegaDog</name> <!-- *** Change this card name -->
		<campaignID>GHDAutocard</campaignID> <!-- *** Change this CMS name -->
	
		<contentClass> <!-- This displays avatar -->
			<className>game.ui.card.CharacterContentView</className>
			<y>-30</y>
			<parameters>
				<param id="scale">0.15</param>
				<param id="forceScale">true</param>
			</parameters>
		</contentClass>
	
		<buttons>
			<btn>
				<index>1</index>
				<label>COSTUMIZE</label>
	 			<actions>
				<action type="costumize" tracking="true"/> <!-- change tracking call -->
			</actions>
			</btn>
			<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
		</buttons>
	
		<textfields>
			<text id="limited">
				<value>FOR A LIMITED TIME ONLY</value>
			</text>
			<text id="subtitle">
				<value>Galactic Hot Dogs</value> <!-- Change this subtitle -->
			</text>
			<text id="adtitle">
				<value>Mega Dog Costume</value> <!-- Change this title -->
			</text>
			<text id="ad">
				<value>ADVERTISEMENT</value>
			</text>
			<text id="memberinstructions">
				<web>Tap space bar to shoot&#10;Jupiter Jolt Sauce!</web>
				<mobile>Tap ACTION to shoot&#10;Jupiter Jolt Sauce!</mobile>
				<y>40</y>
			</text>
		</textfields>
	
		<assets>
			<asset id="cardBack">
				<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath>
			</asset>			
		</assets>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<facial>limited_ghd_megadog</facial>
			<item>limited_ghd_jupiterjolt</item>
			<pants>1</pants>
		</look>
	</looks> 
		
</item>
