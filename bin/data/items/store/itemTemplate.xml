<item id="9999">
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
	<conditionals>
		<conditional type="hasLook" />
	</conditionals>

	<buttons>
		<btn>
			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
			<label>PUT ON</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<index>0</index>
			<conditional id="hasLook" isTrue="true"/>
			<label>TAKE OFF</label>
			<actions>
				<action type="removeLook"/>
			</actions>	
		</btn>
	</buttons>
	
	<radiobuttons>
		<btn>
			<color>0x9B6FC6</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xFF669C</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0x59B4E0</color>
			<val>2</val>
		</btn>
	</radiobuttons>
	
	<textfields>
		<text id="storeSubTitle">
			<value>Poptropica</value>
		</text>
		<text id="storeTitle"> <!-- use storeTitle2 if there are two stacked buttons on the card -->
			<value>Fun Costume</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar to activate&#10;this outfit’s special action!</web>
			<mobile>Tap ACTION to activate&#10;this outfit’s special action!</mobile>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" /> <!-- take out if no card art is needed -->
	</assets>
	
	<looks>
		<look>
			<gender>female</gender>
			<mouth>pgeisha1</mouth>
			<marks>pgeisha1</marks>
			<facial>pgeisha1</facial>
			<hair>pgeisha1</hair>
			<shirt>pgeisha1</shirt>
			<pants>pgeisha1</pants>
			<pack>pgeisha1</pack>
			<item>pgeisha1</item>
			<overshirt>pgeisha1</overshirt>
			<overpants>pgeisha1</overpants>
