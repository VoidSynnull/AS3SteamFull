<item id="2928"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>LegoFriendsWaveRunner</name> <!-- *** Change this card name -->
  	<campaignID>LegoFriendsMMSQ</campaignID> <!-- *** Change this CMS name -->
	
	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>LEGO Friends</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Wave Runner</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value>Â© Lego Friends.</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
    	<!-- <asset id="cardContent" /> -->
  	</assets>
  	
  	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
  	
  	<looks>
	    <look>
			<overshirt>limited_legofriends_wave_runner</overshirt>
			<item>empty</item>
			<pack>empty</pack><!-- swapping back and forth the pack from the other card gets left behind -->
		</look>
	</looks> 
    
</item>
