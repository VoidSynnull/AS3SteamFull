<item id="2516"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Constantine Criminal Power Card</name> <!-- Change this card name -->
  	<campaignID>MuppetsMostWantedMVU2</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
				<action type="openPopup" tracking="Use Constantine Criminal Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="className">game.scenes.custom.CardVideoPower</param>
	  					<param id="swfPath">limited/MuppetsMostWantedMVU2/Steal.swf</param> <!-- location of swf in assets/limited -->
	  					<param id="video">video/as3_Muppets2_Power.flv</param> <!-- name of video stored in poptropica/video/ -->
	  					<param id="videoWidth">960</param>
	  					<param id="videoHeight">540</param>
	  					<param id="event">ConstantineSteal</param> <!-- optional event processed by CardVideoPower -->
					</parameters>
				</action>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Constantine Criminal Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Muppets Most Wanted</value> <!-- Change this subtitle -->
		</text>
		<text id="subtitle">
			<value>Constantine Criminal Power</value> <!-- Change this title -->
			<y>-182</y>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
</item>
