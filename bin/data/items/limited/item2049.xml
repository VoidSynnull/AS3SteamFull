<item id="2049"> <!-- Change this card ID -->
	<type>custom</type>
	<subType>general</subType>
	<name>Gary Rider</name> <!-- *** Change this card name -->
	<campaignID>SpongeBobKampKoralQuest</campaignID> <!-- *** Change this CMS name -->

	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
		<scale>.25</scale>
	</contentClass>

	<buttons>
		<btn>
			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook" tracking="true" />
			</actions>
		</btn>
		<btn>
			<index>1</index>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
		<btn>
			<index>0</index>
			<label>VISIT WEBSITE</label>
			<actions>
				<action type="gotoUrl" tracking="true" />
			</actions>
		</btn>
	</buttons>
	
	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>KAMP KORAL</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Gary Head Rider</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions">
			<web>Tap SPACEBAR to make Gary burp!</web>
			<mobile>Tap action button to burp!</mobile>
			<y>60</y>
		</text>
		<text id="copyright">
			<value>Â©2021 PARAMOUNT ANIMATION</value> <!-- Change or delete this copyright -->
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background zip -->
    	</asset>
		<!-- <asset id="cardContent" />  -->
	</assets>
  	
	<conditionals>
		<conditional type="hasLook" />
	</conditionals>
	
	<looks>
		<look>
			<marks>limited_gary_rider</marks>
		</look>
	</looks>
</item>