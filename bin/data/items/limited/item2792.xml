<item id="2792"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Max Crumbly Pizza Follower Card</name> <!-- Change this card name -->
  	<campaignID>MaxCrumblyPizzaIC</campaignID> <!-- Change this CMS name -->	
 
 <buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="Use Max Crumbly Pizza Follower Card"> <!-- change tracking call -->
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>START READING FREE</label>
      		<actions>
				<action type="gotoUrl" tracking="Max Crumbly Pizza Follower Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>The Misadventures of Max Crumbly</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Slice of Pizza</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value></value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/follower_ss_pizza</specialAbility>
	</specials>
</item>
