<item id="5213"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
  	<campaignID>MemberGift</campaignID>
	
  	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="Leprechaun Follower">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Leprechaun Follower</value>
			<size>28</size>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>pop_follower_leprechaun</specialAbility>
	</specials>
</item>
