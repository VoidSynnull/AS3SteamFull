<item id="2607"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Bonita Costume Card</name> <!-- Change this card name -->
  	<campaignID>MonsterHighMomGirlWishlist</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Bonita Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Bonita Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Monster High</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Bonita Femur Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<gender>female</gender>
			<skinColor>0xeac8e6</skinColor>
			<mouth>pPopGirl1</mouth>
			<marks>limited_mh_bonita</marks>
			<hair>limited_mh_bonita</hair>
			<pack>limited_mh_bonita</pack>
			<overshirt>limited_mh_bonita</overshirt>
			<eyeState>squint</eyeState>
		</look>
	</looks> 
    
</item>
