<item id="2755"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Po Costume Card</name> <!-- Change this card name -->
  	<campaignID>KungFuPanda3MobileMVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
 		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Po Costume Card" /> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Po Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Kung Fu Panda 3</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Po Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_po</facial>
			<hair>limited_po</hair>
			<pack>limited_po</pack>
		</look>
	</looks> 
    
</item>
