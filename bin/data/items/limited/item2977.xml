<item id="2977"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Abominable Berry Card</name> <!-- *** Change this card name -->
  	<campaignID>AbominableQuest</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
		<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Abominable</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Blueberry Splat</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Space bar tap to throw</web>
			<mobile>Tap action button to throw</mobile>
			<y>66</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" />
	</assets>
      	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_abominable_berry</item>
		</look>
	</looks> 
</item>
