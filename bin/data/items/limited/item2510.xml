<item id="2510"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Krax Costume Card</name> <!-- Change this card name -->
  	<campaignID>GalacticHotDogsQuest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>0</index>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Krax Costume Card" /> <!-- change tracking call -->
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Galactic Hot Dogs</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>General Krax</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGHD.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_ghd_krax</facial>
			<overshirt>limited_ghd_krax</overshirt>
		</look>
	</looks> 
</item>
