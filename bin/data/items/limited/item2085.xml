<item id="2085"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Encanto Capybara Follower</name> <!-- *** Change this card name -->
  	<campaignID>EncantoVBB</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
			<btn>
				<index>1</index>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
			<btn>
				<index>1</index>
				<conditional id="hasAbility" isTrue="false"/>
				<label>FOLLOW</label>
				<actions>
				<action type="activatePower" tracking="true">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			
			<btn>
				<index>0</index>
				<label>VISIT WEBSITE</label>
				<actions>
					<action type="gotoUrl" tracking="true" />
				</actions>
			</btn>
		</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Disney's Encanto</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Capybara Follower</value> <!-- Change this title -->
			<size>14</size>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value>Â© Disney.</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
	<conditionals>
		<conditional type="hasAbility" />
	</conditionals>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background zip -->
    	</asset>
		<asset id="cardContent" />
  	</assets>
  	
  	<specials>
		<specialAbility>limited/pop_follower_capybara</specialAbility>
	</specials>
    
</item>
