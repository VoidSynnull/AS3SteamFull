<item id="2535"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Alex Outfit Card</name> <!-- Change this card name -->
  	<campaignID>LandOfStoriesGirlsIC</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Alex Outfit Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Alex Outfit Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
		<text id="adsubtitle"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to flip wand!</value>
			<y>30</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRedOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" />
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<hair>ad_landofstories_alex</hair>
			<shirt>ad_landofstories_alex</shirt>
			<item>ad_landofstories_alex</item>
			<pants>ad_landofstories_alex</pants>
		</look>
	</looks> 
    
</item>
