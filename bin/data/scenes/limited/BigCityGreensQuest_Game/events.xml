			<param1 id="action">lockInput</param1>
		</event>
		<event>
			<param1 id="action">wait</param1>
			<param1 id="delay">6</param1>
		</event>
		<event>
			<param1 id="action">talk</param1>
			<param2 id="npcID">Gramma</param2>
			<param3 id="sayID">goodthing</param3>
		</event>
		<event>
			<param1 id="action">unlockInput</param1>
		</event>
	</group>
