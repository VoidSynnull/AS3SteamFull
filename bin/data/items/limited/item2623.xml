<item id="2623"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Olive Costume Card</name> <!-- Change this card name -->
  	<campaignID>OddSquadMVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Olive Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Olive Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Odd Squad</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Agent Olive Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundTeal.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xfde6b6</skinColor>
			<hairColor>0x36150A</hairColor>
			<eyeState>squint</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<shirt>limited_oddsquad</shirt>
			<hair>sears1</hair>
			<mouth>pcheerleader</mouth>
			<pants>sponsorultimatespiderman_pants</pants>
			
		</look>
	</looks> 
    
</item>
