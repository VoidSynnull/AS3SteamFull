<item id="2945"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Mary Poppins Balloon Card</name> <!-- Change this card name -->
  	<campaignID>MaryPoppinsVBB</campaignID> <!-- Change this CMS name -->
	
  	
  <buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Mary Poppins Balloon Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Mary Poppins Balloon Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Mary Poppins</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Balloon Power</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to fly</value>
			<mobile>Press action button to fly</mobile>
			<y>66</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlueCyan.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		 <asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_marypoppins_balloon</item>
		</look>
	</looks> 
</item>
