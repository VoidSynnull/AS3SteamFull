<item id="2082"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>MummyFollower</name> <!-- *** Change this card name -->
  	<campaignID>DisneyUnderwrapsVBB</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Disney Channel’s Under Wraps</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Dancing Mummy Follower</value> <!-- Change this title -->
			<size>14</size>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to use the power!</value>
			<web>Press SPACEBAR to change others!</web>
			<mobile>Press action button to dance!</mobile>
			<y>66</y>
		</text>
		<text id="copyright">
			<value>© Disney</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background zip -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.zip -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/pop_follower_mummy</specialAbility>
	</specials>
</item>
