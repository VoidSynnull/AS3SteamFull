<item id="5284"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
  	</buttons>
	<radiobuttons>
		<btn>
			<color>0x3dacd3</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xa82a29</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0x085e08</color>
			<val>2</val>
		</btn>
	 </radiobuttons>
  	<textfields>
		<text id="storeTitle">
			<value>Winter Masks</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<looks>
		<look> <!-- Only list what you want to change -->
			 <facial>mem_winter_mask1</facial>
		</look>
		<look> <!-- Only list what you want to change -->
			 <facial>mem_winter_mask2</facial>
		</look>
		<look> <!-- Only list what you want to change -->
			 <facial>mem_winter_mask3</facial>
		</look>
	</looks>

</item>
