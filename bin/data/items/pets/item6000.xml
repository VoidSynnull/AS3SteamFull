<item id="6000"> <!-- Change this card ID -->
  	<type>pets</type>
	<subType>general</subType>
	
    <contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  		<parameters>
			<param id="pet">true</param>
		</parameters>
 	</contentClass>
	
 	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE PET</label>
    		<actions>
				<action type="activatePower">
					<parameters>
				  		<param id="trigger">true</param>
					</parameters>
				</action>
				<action type="track">
					<parameters>
				  		<param id="eventtype">EquipPet</param>
				  		<param id="choice">Kitten</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY PET</label>
    		<actions>
				<action type="deactivatePower"/>
				<action type="track">
					<parameters>
				  		<param id="eventtype">UnEquipPet</param>
				  		<param id="choice">Kitten</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Poptropica Pet</value>
		</text>
		<text id="storeTitle">
			<value>Kitten</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
   	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
   	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xFF9831</skinColor>
			<mouth>kitten</mouth>
			<head>kitten</head>
			<body>kitten</body>
			<marks>kitten_ears</marks>
			<tail>kitten</tail>
			<paw1>kitten</paw1>
			<paw2>kitten</paw2>
			<paw3>kitten</paw3>
			<paw4>kitten</paw4>
			<calf1>kitten_front</calf1>
			<calf2>kitten_front</calf2>
			<calf3>kitten_back</calf3>
			<calf4>kitten_back</calf4>
			<thigh1>kitten_front</thigh1>
			<thigh2>kitten_front</thigh2>
			<thigh3>kitten_back</thigh3>
			<thigh4>kitten_back</thigh4>
			<facial>empty</facial>
			<hair>empty</hair>
			<eyes>eyes</eyes>
			<overbody>empty</overbody>
		</look>
	</looks> 

    <specials>
		<specialAbility>pets/pop_follower_kitten</specialAbility>
	</specials>
</item>
