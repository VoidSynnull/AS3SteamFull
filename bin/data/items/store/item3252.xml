<item id="3252">
		<type>store</type>
		<subType>general</subType>

		<buttons>
				<btn>
				<conditional id="hasLook" isTrue="false"/>
						<label>START BLASTING</label>
						<actions>
						<action type="applyLook"/>
					</actions>
				</btn>
			<btn>
				<conditional id="hasLook" isTrue="true"/>
						<label>TAKE OFF</label>
						<actions>
						<action type="removeLook"/>
					</actions>
				</btn>
		</buttons>
	
		<textfields>
			<text id="storeTitle">
					<value>Candy Cane-on</value>
	 	 	</text>
		<text id="storeInstructions">
			<web>Tap space bar to shoot snowballs</web>
			<mobile>Tap ACTION to shoot snowballs</mobile>
		</text>
		</textfields>
		<assets>
		<asset id="cardBack" />
		<asset id="cardContent"/>
		</assets>
		
		<looks>
			<look>
			<item>p_candy_cane-on</item>
		</look>
	</looks> 
	
	<conditionals>
		<conditional type="hasLook" />
		</conditionals>
	
</item>