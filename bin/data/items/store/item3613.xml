<item id="3613"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
	
		<buttons>
	 		<btn>
				<index>0</index>
				<conditional id="hasLook" isTrue="true"/>
				<label>TURN OFF</label>
	 			<actions>
				<action type="removeLook" />
			</actions>
			</btn>
 		<btn>
				<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
				<label>USE</label>
	 			<actions>
				<action type="applyLook" />
			</actions>
			</btn>
		</buttons>
	
	<textfields>
	<text id="storeTitle">
		<value>Crushing Power</value>
	</text>
	<text id="storeInstructions">
			<web>Tap space bar to crush</web>
			<mobile>Tap ACTION to crush</mobile>
	</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
			<asset id="cardContent"/>
		</assets>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<item>valentine_crushing</item>
		</look>
	</looks>
	
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
</item>
