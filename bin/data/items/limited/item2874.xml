<item id="2874"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Tube Escape Power Card</name> <!-- Change this card name -->
  	<campaignID>KidDangerQuest</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Tube Escape Power Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Tube Escape Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Kid Danger</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Escape Tube Power</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Space bar tap to trigger</web>
			<mobile>Press action button to trigger</mobile>
			<y>66</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<overpants>limited_kiddanger_belt</overpants>
			<item>empty</item>
			<marks>empty</marks>
			<overshirt>empty</overshirt>
		</look>
	</looks> 
</item>
