<manifest>
	<!-- campaign xml files -->
	<data type="campaign" path="data/limited/SmallfootMVU/" ext="xml">
		<asset>zipmanifest</asset>
		<asset>version</asset>
	</data>

	<!-- main street xml files and swfs -->
	<!-- from scene.xml in ad scene plus scene.xml -->
	<data type="game" path="data/limited/SmallfootMVU/" ext="xml">
		<asset>custom</asset>
		<asset>dialog</asset>
		<asset>hits</asset>
		<asset>hotspots</asset>
		<asset>npcs</asset>
		<asset>scene</asset>
		<asset>tracking</asset>
		<asset>Fly</asset>
		<asset>motionMaster</asset>
		<asset>segmentPatterns</asset>
	</data>
	<!-- from scene.xml in ad scene -->
	<assets type="game" path="assets/limited/SmallfootMVU/" ext="swf">
		<asset>background</asset>
		<asset>interactive</asset>
	</assets>
	
	<!-- bitmap npcs -->
	<assets type="game" path="assets/limited/SmallfootMVU/" ext="swf">
		<asset>ChooseFly</asset>
		<asset>LoseFly</asset>
		<asset>StartFly</asset>
		<asset>WinFly</asset>
		<asset>Fly</asset>
		<asset>npc</asset>
	</assets>
	
	<!-- music assets -->
	<assets type="sounds" path="sound/music/" ext="mp3" keep="true">
		<asset>mfb_battle_variation</asset>
		<asset>dangerous_pursuit</asset>
	</assets>
	
	<!-- sound assets -->
	<assets type="sounds" path="sound/effects/" ext="mp3" keep="true">
		<asset>flesh_impact_01</asset>
		<asset>flesh_impact_02</asset>
		<asset>glass_break_02</asset>
		<asset>can_impact_01</asset>
		<asset>metal_impact_12</asset>
	</assets>

	<!-- card xml files, swfs, backs -->
	<data type="card" path="data/items/limited/" prefix="item" ext="xml">
		<asset>2916</asset>
	</data>
	
	<assets type="card" path="assets/items/limited/" prefix="item" ext="swf">
		<asset>2916</asset>
	</assets>
	
	<assets type="cardBack" path="assets/items/limited/backs/" ext="swf">
		<asset>AdBackgroundBlue</asset>
	</assets>

	<!-- animation xml files -->
	<data type="animation" path="data/entity/character/animation/human/" ext="xml">
		<asset>standNinja</asset>
	</data>

	<!-- avatar parts -->
	<data type="item" path="data/entity/character/parts/item/" ext="xml">
		<asset>limited_smallfoot</asset>
	</data>
	<assets type="item" path="assets/entity/character/item/" ext="swf">
		<asset>limited_smallfoot</asset>
	</assets>
	<data type="facial" path="data/entity/character/parts/facial/" ext="xml">
		<asset>limited_smallfoot</asset>
	</data>
	<assets type="facial" path="assets/entity/character/facial/" ext="swf">
		<asset>limited_smallfoot</asset>
	</assets>
</manifest>