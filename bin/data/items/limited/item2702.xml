<item id="2702"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Infinity Costume Card</name> <!-- Change this card name -->
  	<campaignID>DisneyInfinityStarWars2MVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Infinity Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Infinity Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="adtitle">
			<value>Disney Infinity Gear</value> <!-- Change this title -->
			<y>-193</y>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xfde7b6</skinColor>
			<hairColor>0x72472b</hairColor>
			<eyeState>casual</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth>montgomery</mouth> <!-- use frame label for numbers after 60 -->
			<facial>limited_dislogo_hat</facial>
			<shirt>limited_disinfinity</shirt>
			<pants>sponsor_stevuni</pants>
		</look>
	</looks> 
    
</item>
