<item id="2771"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Chipmunk Costume Card</name> <!-- Change this card name -->
  	<campaignID>Alvin4FoxMVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Chipmunk Costume Card" /> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Chipmunk Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Alvin and the Chipmunks</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Chipmunk Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to speak like Alvin!</value>
			<y>66</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<mouth>sponsorchipwrecked_alvin</mouth> <!-- use frame label for numbers after 60 -->
			<facial>sponsorchipwrecked_talvin</facial>
			<shirt>limited_alvin</shirt>
			<pants>pzorro</pants>
			<item>limited_alvin_mic</item>
		</look>
	</looks> 
</item>
