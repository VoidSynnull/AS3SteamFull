<item id="5210"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
		<campaignID>MemberGift</campaignID>
	
		<buttons>
			<btn>
				<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
				<label>USE</label>
				<actions>
				<action type="applyLook" tracking="Valentine Storm"/>
			</actions>
			</btn>
			<btn>
				<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
				<label>PUT AWAY</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
		</buttons>
	
	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Candy Storm</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar for storm</web>
			<mobile>Tap ACTION for storm</mobile>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
	</assets>
		
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<item>valentinestorm</item>
		</look>
	</looks> 
</item>
