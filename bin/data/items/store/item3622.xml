<item id="3622">
		<type>store</type>
		<subType>general</subType>
	
	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
		
	<textfields>
			<text id="storeTitle">
				<value>Flower Planting Power</value>
			</text>
			<text id="storeInstructions">
				<web>Tap space bar to plant!</web>
				<mobile>Tap ACTION to plant!</mobile>
		</text>
	</textfields>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" /> 
	</assets>
		
	<looks>
		<look>
			<item>springflower</item>
		</look>
	</looks>
	
</item>