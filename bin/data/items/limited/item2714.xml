<item id="2714"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Treasure Hunters Dragon Follower Card</name> <!-- Change this card name -->
  	<campaignID>TreasureHuntersIC</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="Use Treasure Hunters Dragon Follower Card"> <!-- change tracking call -->
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Treasure Hunters Dragon Follower Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Treasure Hunters</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Dragon Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlueGreenBorder.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specialAbilities>
		<specialAbility id="Follower">
			<className>game.data.specialAbility.character.AddFollower</className>
			<parameters>
			    <param id="num">82</param> <!-- AS2 follower number -->
				<param id="campaignId">2714</param>
	   			<param id="filePath">limited/TreasureHuntersIC/DragonFollower.swf</param> <!-- path to follower swf -->
	   			<param id="campaignName">TreasureHuntersIC</param> <!-- path to follower swf -->
	   			<param id="followerName">Treasure Hunters Dragon Follower Card</param>
			</parameters>
			<triggerable>false</triggerable>
		</specialAbility>
	</specialAbilities>
</item>
