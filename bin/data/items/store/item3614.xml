<item id="3614"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
	
		<contentClass> <!-- This displays avatar -->
			<className>game.ui.card.CharacterContentView</className>
		</contentClass>
	
		<buttons>
			<btn>
				<index>0</index>
				<conditional id="hasLook" isTrue="true"/>
				<label>TAKE OFF</label>
	 			<actions>
				<action type="removeLook" />
			</actions>
			</btn>
			<btn>
				<index>0</index>
 			<conditional id="hasLook" isTrue="false"/>
				<label>USE</label>
	 			<actions>
				<action type="applyLook" />
			</actions>
			</btn>
		</buttons>
	
	<textfields>
	<text id="storeTitle">
		<value>Cupid Bow &amp; Arrow</value>
	</text>
	<text id="storeInstructions">
		<web>Tap space bar to shoot arrow</web>
		<mobile>Tap ACTION to shoot arrow</mobile>
	</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
		</assets>
		
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<item>valentine_bow</item>
		</look>
	</looks>
	
</item>
