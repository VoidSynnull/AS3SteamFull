<item id="2843"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Racing Cap Card</name> <!-- Change this card name -->
  	<campaignID>Cars3MVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Racing Cap Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Racing Cap Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
 	<radiobuttons> <!-- Change button colors -->
		<btn>
			<y>13</y>
			<color>0xE61403</color>
			<val>0</val>
		</btn>
		<btn>
			<y>13</y>
			<color>0xFECC16</color>
			<val>1</val>
		</btn>
		<btn>
			<y>13</y>
			<color>0x2B2E40</color>
			<val>2</val>
		</btn>
	</radiobuttons>
	
 	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Cars 3</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Racing Cap</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_lightningmcqueen</facial>
		</look>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_cruz</facial>
		</look>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_storm</facial>
		</look>
	</looks> 
    
