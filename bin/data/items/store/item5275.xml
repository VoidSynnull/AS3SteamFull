<item id="5275"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
  	</buttons>
	<radiobuttons>
		<btn>
			<color>0x7DE4FD</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xFFB778</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0x7FFF78</color>
			<val>2</val>
		</btn>
		<btn>
			<color>0xAC78FF</color>
			<val>3</val>
		</btn>
	 </radiobuttons>
  	<textfields>
		<text id="storeTitle">
			<value>Slime</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<looks>
		<look> <!-- Only list what you want to change -->
			 <item>aug_member_slime1</item>
		</look>
		<look> <!-- Only list what you want to change -->
			 <item>aug_member_slime2</item>
		</look>
		<look> <!-- Only list what you want to change -->
			 <item>aug_member_slime3</item>
		</look>
		<look> <!-- Only list what you want to change -->
			 <item>aug_member_slime4</item>
		</look>
	</looks>

</item>
