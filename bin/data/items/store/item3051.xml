<item id="3051">
	<type>island</type>
	<subType>examples</subType>
		
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="clickableSpecial">true</param>
		</parameters>
	</contentClass>
	
		<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>CREATE</label>
				<actions>
				<action type="activatePower">
					<parameters>
							<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
		
		<textfields>
	 	 	<text id="storeSubTitle">
					<value>Followers</value>
	 	 	</text>
	 	 	<text id="storeTitle">
					<value>Classic Pack</value>
	 	 	</text>
	 	 	<text id="storeInstructions">
				<web>Click on the follower to&#10;change your selection.</web>
				<mobile>Tap on the follower to&#10;change your selection.</mobile>
			</text>
		</textfields>
		
		<assets>
		<asset id="cardBack" />
		</assets>
		
 	<specials>
			<specialAbility>follower_classic_1</specialAbility>
			<specialAbility>follower_classic_2</specialAbility>
			<specialAbility>follower_classic_3</specialAbility>
			<specialAbility>follower_classic_4</specialAbility>
			<specialAbility>follower_classic_5</specialAbility>
			<specialAbility>follower_classic_6</specialAbility>
			<specialAbility>follower_classic_7</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
