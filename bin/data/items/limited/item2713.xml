<item id="2713">
  <type>custom</type>
	<subType>general</subType>
	<name>8th Birthday Card</name> <!-- Change this card name -->
  	<campaignID>PoptropicaBirthdayMobileVendorCart</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>INFLATE</label>
    		<actions>
				<action type="activatePower" tracking="Use 8th Birthday Card">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<conditional id="hasAbility" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
  	</buttons>
  	<textfields>
	    <text>
	      <value>Birthday Balloon</value>
	    </text>
		<text id="memberinstructions">
	      <value>Celebrate Poptropica's 8th birthday with this balloon!</value>
	      <y>95</y>
	    </text>
	</textfields>
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/shared/PaidLimitedBackground.swf</assetPath>
    	</asset>
		<asset id="cardContent"/>
  	</assets>
  	
	<specials>
  		<specialAbility>balloon_birthday8</specialAbility>
  	</specials>
	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
</item>