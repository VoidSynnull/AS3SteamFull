<item id="2697"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Whoopee Cushion Card</name> <!-- Change this card name -->
  	<campaignID>PromoCodeMS</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Whoopee Cushion Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		
		<text id="adtitle">
			<value>Whoopee Cushion</value> <!-- Change this title -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_whoopee</item>
		</look>
	</looks> 
</item>
