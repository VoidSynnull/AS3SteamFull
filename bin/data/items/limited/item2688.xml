<item id="2688"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Sheep Belch Card</name> <!-- Change this card name -->
  	<campaignID>ShaunTheSheepPartyRoom</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
		<btn>
  			<index>1</index>
				<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
					<action type="applyLook"  tracking="Use Sheep Belch Card"> 
				</action>
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
					<action type="removeLook"/>
			</actions>
  		</btn>		
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Sheep Belch Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Shaun the Sheep</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Sheep Belch</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any instructions -->
			<value>Press SPACEBAR for a surprise!</value>
			<y>66</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" />
  	</assets>

	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	<looks>
	    <look>
			<marks>limited_shaun_belch</marks>
		</look>
	</looks> 
	
</item>