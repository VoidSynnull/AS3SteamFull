		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPink.swf</assetPath>
    	</asset>
		<asset id="cardContent" />
  	</assets>
  	
</item>
