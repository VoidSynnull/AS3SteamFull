<item id="2451"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>AutoCard</name> <!-- Change this card name -->
  	<campaignID>InfinityRingFall2013VideoCard</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>WATCH THE TRAILER</label>
    		<actions>
				<action type="openVideoPopup" tracking="Video Popup">
	  				<parameters>
	  					<param id="className">game.scenes.custom.AutoCardVideo</param>
	  					<param id="swfPath">limited/InfinityRingFall2013VideoCard/InfinityVideoPopup.swf</param> <!-- location of swf in assets/scenes/limited -->
					</parameters>
				</action>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>PLAY NOW</label>
      		<actions>
				<action type="gotoUrl" tracking="Video Card">
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="adtitle">
			<value>Fix the past.</value> <!-- Change this subtitle -->
			<y>-207</y>
		</text>
		<text id="adtitle">
			<value>Save the future.</value> <!-- Change this title -->
			<y>-180</y>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
</item>
