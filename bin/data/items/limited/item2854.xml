<item id="2854"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Mr. Lemoncello Costume Card</name> <!-- Change this card name -->
  	<campaignID>LemoncelloQuest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Mr. Lemoncello Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Mr. Lemoncello Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Escape from Mr. Lemoncello's Library</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Mr. Lemoncello Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Press SPACEBAR to open umbrella</web>
			<mobile>Press action button to open umbrella</mobile>
			<y>66</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundYellow.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xfae0c9</skinColor>
			<hairColor>0x453929</hairColor>
			<eyeState>open</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth>1</mouth> <!-- use frame label for numbers after 60 -->
			<marks>limited_lemoncello</marks>
			<facial>limited_lemoncello</facial>
			<hair>limited_lemoncello</hair>
			<pants>3</pants>
			<item>limited_lemoncello</item>
			<overshirt>limited_lemoncello</overshirt>
		</look>
	</looks> 
    
</item>
