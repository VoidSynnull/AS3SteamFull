<item id="3359">
	<type>store</type>
	<subType>general</subType>
	
	<buttons>
		<btn>
		<conditional id="hasAbility" isTrue="false"/>
			<label>FOLLOW</label>
			<actions>
			<action type="activatePower"> <!-- change tracking call -->
					<parameters>
						<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
		</btn>
		<btn>
 			<conditional id="hasAbility" isTrue="true"/>
			<label>TURN OFF</label>
			<actions>
				<action type="deactivatePower"/>
			</actions>
		</btn>
	</buttons>

	<textfields>
		<text id="storeSubTitle">
			<value>Atlantis - Episode 3</value>
		</text>
		<text id="storeTitle">
			<value>Atlantis Drone</value>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent" />
	</assets>

	<conditionals>
		<conditional type="hasAbility" />
	</conditionals>

	<specials>
		<specialAbility>follower_drone</specialAbility>
	</specials>

</item>