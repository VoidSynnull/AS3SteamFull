<item id="3678">
	<type>store</type>
	<subType>general</subType>
		
	<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
		
		<textfields>
			<text id="storeTitle">
				<value>Witch's Brew</value>
			</text>
			<text id="storeInstructions">
				<web>Tap space bar to throw</web>
				<mobile>Press ACTION to throw</mobile>
			</text>
	</textfields>
	
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<looks>
		<look>
		<item>stor_witchbrew</item>
		</look>
	</looks> 

	
</item>