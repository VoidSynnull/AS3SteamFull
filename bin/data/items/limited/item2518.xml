<item id="2518"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>James Costume Card</name> <!-- Change this card name -->
  	<campaignID>PirateFairyQuest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use James Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="James Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value></value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value></value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
		<text id="copyright">
			<value>©2014 Disney</value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundTeal.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item2519.swf -->
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xfbdfcb</skinColor>
			<hairColor>0x000000</hairColor>
			<eyeState>squint</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth>greekWiseGuy</mouth> <!-- use frame label for numbers after 60 -->
			<marks></marks>
			<facial></facial>
			<hair>ad_piratefairy_james</hair>
			<shirt>ad_piratefairy_james</shirt>
			<pants>ad_gh_boy</pants>
			<pack></pack>
			<item></item>
			<overshirt></overshirt>
			<overpants>sponsorwalmartelf</overpants>
		</look>
	</looks> 
    
</item>
