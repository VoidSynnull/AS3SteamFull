	<subType>general</subType>
	<name>DC Supergirls Lasso Card</name> <!-- *** Change this card name -->
  	<campaignID>DCSupergirlsVBB</campaignID> <!-- *** Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
