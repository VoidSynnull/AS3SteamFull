		<text id="adtitle">
			<value>Gary Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Press SPACEBAR to make Gary meow!</web>
			<mobile>Tap action button for Gary to meow!</mobile>
			<y>66</y>
		</text>
		<text id="copyright">
			<value>Â©2021 PARAMOUNT ANIMATION</value> <!-- Change or delete this copyright -->
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack">
			<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background zip -->
		</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.zip -->
 	</assets>
  	
	<conditionals>
		<conditional type="hasAbility" />
	</conditionals>
    
	<specials>
		<specialAbility>limited/pop_follower_gary</specialAbility>
	</specials>
</item>
