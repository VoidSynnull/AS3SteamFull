<item id="6004"> <!-- Change this card ID -->
  	<type>pets</type>
	<subType>general</subType>
	
     <contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  		<parameters>
			<param id="pet">true</param>
		</parameters>
  	</contentClass>
	
 	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE PET</label>
    		<actions>
				<action type="activatePower"> <!-- change tracking call -->
					<parameters>
				  		<param id="trigger">true</param>
					</parameters>
				</action>
				<action type="track"> <!-- change tracking call -->
					<parameters>
				  		<param id="eventtype">EquipPet</param>
				  		<param id="choice">Lizard</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY PET</label>
    		<actions>
				<action type="deactivatePower"/>
				<action type="track"> <!-- change tracking call -->
					<parameters>
				  		<param id="eventtype">UnEquipPet</param>
				  		<param id="choice">Lizard</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Members-Only Pet</value>
		</text>
		<text id="storeTitle">
			<value>Lizard</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack"/>
  	</assets>
   	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
   	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0x53A852</skinColor>
			<mouth>lizard</mouth>
			<head>lizard</head>
			<body>lizard</body>
			<marks>lizard_ears</marks>
			<tail>lizard</tail>
			<paw1>lizard</paw1>
			<paw2>lizard</paw2>
			<paw3>lizard</paw3>
			<paw4>lizard</paw4>
			<calf1>lizard_front</calf1>
			<calf2>lizard_front</calf2>
			<calf3>lizard_back</calf3>
			<calf4>lizard_back</calf4>
			<thigh1>lizard_front</thigh1>
			<thigh2>lizard_front</thigh2>
			<thigh3>lizard_back</thigh3>
			<thigh4>lizard_back</thigh4>
			<facial>empty</facial>
			<hair>empty</hair>
			<eyes>eyes</eyes>
			<overbody>empty</overbody>
		</look>
	</looks> 

    <specials>
		<specialAbility>pets/pop_follower_lizard</specialAbility>
	</specials>
</item>
