<item id="5224"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
  	<campaignID>MemberGift</campaignID>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
				<param id="scale">.6</param>
			</parameters>
			<y>-30</y>
	</contentClass>
	
  <buttons>
	 	<btn>
			<index>0</index>
			<label>COSTUMIZE</label>
			<actions>
				<action type="costumize"/>
			</actions>
		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Surfer Outfit</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>

	<looks>
		<look> <!-- Only list what you want to change -->
			<mouth>tyson</mouth>
			<hair>july_surfer</hair>
			<pants>july_surfer</pants>
			<item>july_surfer</item>
			<overshirt>july_surfer</overshirt>
		</look>
	</looks>

</item>
