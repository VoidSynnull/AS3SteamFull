<item id="2841"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Racing Outfit Card</name> <!-- Change this card name -->
  	<campaignID>Cars3Quest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Racing Outfit Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Racing Outfit Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Cars 3</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Racing Outfit</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Press space bar to transform others</web>
			<mobile>Press action button to transform others</mobile>
			<y>66</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<facial>limited_lightning</facial>
			<pants>limited_lightning</pants>
			<overshirt>limited_lightning</overshirt>
		</look>
	</looks> 
    
</item>
