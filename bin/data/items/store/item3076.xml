<item id="3076">
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>

		<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
				<label>PUT ON</label>
				<actions>
				<action type="applyLook"/>
			</actions>
			</btn>
			<btn>
			<conditional id="hasLook" isTrue="true"/>
				<label>TAKE OFF</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
		</buttons>
	<textfields>
	 	<text id="storeTitle">
					<value>Silly Streams</value>
			</text>
			<text id="storeInstructions">
				<web>Tap space bar to start the fun!</web>
				<mobile>Tap ACTION to start the fun!</mobile>
			</text>
		</textfields>
	<assets>
		<asset id="cardBack" /><asset id="cardContent"/>
		</assets>
		
		<looks>
			<look>
		 	<item>sillystring</item>
		 	</look> 
	</looks> 

		 <conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
</item>