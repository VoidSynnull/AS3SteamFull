<item id="3611"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
		<campaignID>MemberGift</campaignID>
	
	<buttons>
		<btn>
				<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
				<label>INFLATE</label>
				<actions>
				<action type="activatePower" > <!-- change tracking call -->
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
	
	<textfields>
	<text id="storeTitle">
		<value>Heart Balloon</value>
	</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent"/>
		</assets>
		
		<specials>
			<specialAbility>balloon_valentine_balloon</specialAbility>
		</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
</item>
