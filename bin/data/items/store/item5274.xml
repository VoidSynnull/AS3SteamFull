<item id="5274"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  		<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>INFLATE</label>
				<actions>
				<action type="activatePower" tracking="Use 7th Birthday Card">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
		<textfields>
			<text id="storeTitle">
				<value>Rainbow Balloon</value>
			</text>
	</textfields>
		<assets>
		<asset id="cardBack" />
		
		</assets>
		
	<specials>
		<specialAbility>balloon_rainbow</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
</item>