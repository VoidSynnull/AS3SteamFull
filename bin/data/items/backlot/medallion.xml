<item id="medallion">
	<type>island</type>
	<subType>backlot</subType>
	
	<buttons>
  		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook"/>
				<action type="tiggerEvent">
		  			<parameters>
		  				<param id="event">useMedal</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	
	<textfields>
  		<text>
    		<value>Island Medallion</value>
  		</text>
  		<!-- 
  		<text>
    		<value>Congratulations!&#10;You have completed the&#10;24 Carrot Beta quest.</value>
   			<size>15</size>
    		<y>65</y>
  		</text>
  		-->
  	</textfields>
  	
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/shared/BacklotBackground.swf</assetPath>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
    
    <looks>
	    <look>
		 	<overshirt>medalbacklot</overshirt>
	   	</look> 
	</looks>  
	
	<conditionals>
    	<conditional type="hasLook" />	<!-- if no lookId param is given uses first look by default -->
    </conditionals>
</item>