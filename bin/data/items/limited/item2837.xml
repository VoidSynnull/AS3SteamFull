<item id="2837"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Pirate Transformation Card</name> <!-- Change this card name -->
  	<campaignID>PirateBlimp</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  		<y>-20</y>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Pirate Transformation Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Pirate Transformation Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Pirates of the Caribbean</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Pirate Transformation</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Space bar tap to transform</web>
			<mobile>Press action button to transform</mobile>
			<y>45</y>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>everyone into a pirate</value>
			<y>63</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGrayBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xCAA790</skinColor>
			<hairColor>0x0</hairColor>
			<eyeState>casual</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth>limited_shark</mouth> <!-- use frame label for numbers after 60 -->
			<marks>limited_captainjack</marks>
			<facial>limited_captainjack</facial>
			<hair>limited_captainjack</hair>
			<shirt>limited_captainjack</shirt>
			<pants>limited_judy</pants>
			<item>limited_captainjack</item>
		</look>
	</looks> 
    
</item>