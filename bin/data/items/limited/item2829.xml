<item id="2829"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Lumiere Follower Card</name> <!-- Change this card name -->
  	<campaignID>BeautyBeastMVU1</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
    			<action type="applyLook" /> <!-- change tracking call -->
				<action type="activatePower" tracking="Use Lumiere Follower Card"> <!-- change tracking call -->
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
    			<action type="removeLook"/>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Lumiere Follower Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Disney Beauty and the Beast</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Lumiere Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR for glow effect!</value>
			<y>66</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/pop_follower_lumiere</specialAbility>
	</specials>
 	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_beauty_candle</item>
		</look>
	</looks> 

</item>
