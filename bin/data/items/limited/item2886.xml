<item id="2886"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Silly Streams Card</name> <!-- *** Change this card name -->
  	<campaignID>March2018Prizes</campaignID> <!-- *** Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true"/> 
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>THIS WEEK ONLY</value>
		</text>
		<text id="subtitle">
			<value>March Prizes</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Silly Streams</value> <!-- Change this title -->
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Spacebar tap to start the fun!</web>
			<y>115</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>sillystring</item>
		</look>
	</looks> 
</item>
