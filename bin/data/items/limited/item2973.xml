<item id="2973"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Follow Your Nose Card</name> <!-- *** Change this card name -->
  	<campaignID>FrootLoops819Quest</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Froot Loops</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Follow Your Nose!</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundYellow.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> 
  	</assets>
  	
  	<looks>
	    <look>
			<facial>ad_frootloops_toucanhat</facial>
		</look>
	</looks> 
    
