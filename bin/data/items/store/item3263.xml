<item id="3263">
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="Dryad Follower">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Twisted Thicket</value>
	 	 </text>
		<text id="storeTitle">
			<value>Dryad</value>
			<size>28</size>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<!--<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>follower_dryad</specialAbility>
	</specials>
</item>