<item id="candle">
  	<type>island</type>
  	<subType>skullduggery</subType>
  	<buttons>
	    <btn>
	      	<label>USE</label>
	      	<actions>
	    		<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="true"/>
		  			<parameters>
		  				<param id="event">use_candle</param>
					</parameters>					
				</action>
				<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="false"/>
		  			<parameters>
		  				<param id="event">dont_use_candle</param>
					</parameters>					
				</action>
			</actions>
	    </btn>
  	</buttons>
  	<textfields>
 		<text>
      		<value>Blue Candle</value>
    	</text>
    	<text>
      		<value>This candle emits a strange bluish light.</value>
      		<size>18</size>
      		<y>90</y>
      		<width>190</width>
      		<textColor>0x606060</textColor>
      	</text>    	
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/shared/SkullduggeryBackground.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-66</saturation>
     			<hue>163</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
    <conditionals>
    	<conditional type="inScene">
    		<parameters>
		  		<param id="validScenes">game.scenes.trade.governor.Governor</param>
			</parameters>
    	</conditional>
    </conditionals>
</item>