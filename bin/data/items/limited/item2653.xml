<item id="2653"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Track Builder Costume Card</name> <!-- Change this card name -->
  	<campaignID>HotWheelsTrackBuilderQuest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Track Builder Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>PLAY NEW GAME</label>
      		<actions>
				<action type="gotoUrl" tracking="Track Builder Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Hot Wheels</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Track Builder Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to activate!</value>
			<y>66</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<gender>male</gender>
			<skinColor>0xfbdfcb</skinColor>
			<hairColor>0x453929</hairColor>
			<facial>limited_hotwheels_trackbuilder</facial>
			<shirt>limited_hotwheels_trackbuilder</shirt>
			<pants>ppunkgirl3</pants>
			<item>limited_hotwheels_wrench</item>
			<overpants>miner1</overpants>
		</look>
	</looks> 
    
</item>
