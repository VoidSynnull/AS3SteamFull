<item id="3664"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeTitle">
			<value>School Backpack</value>
		</text>
		<text id="storeInstructions">
			<web>Press SPACEBAR for a surprise!</web>
			<mobile>Press action button for a surprise!</mobile>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>

	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<looks>
		<look> <!-- Only list what you want to change -->
			<pack>school_backpack</pack>
			<overshirt>school_backpack</overshirt>
		</look>
	</looks>

</item>
