<item id="3249">
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
	<buttons>
 		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	
	<textfields>
		<text id="storeSubTitle">
			<value>Poptropica: The Official Guide</value>
		</text>
		<text id="storeTitle">
			<value>Spiffy Hat</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar to enable effects!</web>
			<mobile>Tap ACTION to enable effects!</mobile>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<looks>
		<look>
			<facial>scavengerhat</facial>
		</look>
	</looks> 
</item>