<item id="2993"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Sonic Shoes</name> <!-- *** Change this card name -->
  	<campaignID>SonicVBB</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
				<action type="removeLook"/>
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
				  		<param id="trigger">true</param>
					</parameters>
				</action>
				<action type="applyLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Sonic</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Sonic Super Speed</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Tap space bar to dash!</web>
			<mobile>Press action button to dash!</mobile>
			<y>60</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath>
    	</asset>
		<asset id="cardContent" />
  	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    <looks>
	    <look>
			<item>limited_sonic_speed</item>
		</look>
	</looks> 
 	<specials>
		<specialAbility>shoes_sonic</specialAbility>	
	</specials>
</item>
