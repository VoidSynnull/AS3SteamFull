<item id="3693"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
  	</buttons>
	<radiobuttons>
		<btn>
			<color>0xa12929</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xdafbfc</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0x333333</color>
			<val>2</val>
		</btn>
	</radiobuttons>
  	<textfields>
		<text id="storeTitle">
			<value>Friendly Face Masks</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<looks>
		<look>
			<facial>store_mask1</facial>
		</look>
		<look>
			<facial>store_mask2</facial>
		</look>
		<look>
			<facial>store_mask3</facial>
		</look>
	</looks>

</item>
