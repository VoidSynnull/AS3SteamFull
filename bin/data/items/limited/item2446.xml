<item id="2446"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
 	<name>Spirit Animals Essix Follower Card</name> <!-- Change this card name -->
 	<campaignID>SpiritAnimalsPartyRoom</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="Use Spirit Animals Essix Follower Card"> <!-- Change any parameters -->
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>JOIN THE QUEST</label>
      		<actions>
				<action type="gotoUrl" tracking="Spirit Animals Essix Follower Card">
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
		  <value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
		  <value>Spirit Animals</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
		  <value>Essix Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
		  <value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundTeal.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/spirit_animal_follower</specialAbility>
	</specials>
</item>
