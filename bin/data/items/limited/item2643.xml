<item id="2643"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Cleopatra Costume Card</name> <!-- Change this card name -->
  	<campaignID>NightAtTheMuseum3Quest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Cleopatra Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Cleopatra Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Night at the Museum 3</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Cleopatra Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
		  <skinColor>0xd2aa72</skinColor>
		  <hairColor>0x1</hairColor>
		  <eyeState>casual</eyeState>
		  <mouth>limited_cleo</mouth>
		  <hair>limited_cleo</hair>
		  <shirt>limited_cleo</shirt>
		  <pants>limited_cleo</pants>
		  <item>limited_pegyptq</item>
		</look>
	</looks> 
    
</item>
