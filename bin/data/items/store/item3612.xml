<item id="3612"> <!-- Change this card ID -->
		<type>store</type>
	<subType>general</subType>
	
		<contentClass> <!-- This displays avatar -->
			<className>game.ui.card.CharacterContentView</className>
		</contentClass>
	
		<buttons>
	 		<btn>
				<index>0</index>
				<conditional id="hasLook" isTrue="true"/>
				<label>TAKE OFF</label>
	 			<actions>
				<action type="removeLook" />
			</actions>
			</btn>
 		<btn>
				<index>0</index>
 			<conditional id="hasLook" isTrue="false"/>
	 			<label>USE</label>
	 			<actions>
				<action type="applyLook" />
			</actions>
			</btn>
		</buttons>
	
	<textfields>
	<text id="storeTitle">
		<value>Valentine Shades</value>
	</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" />
		</assets>
		
		<looks>
			<look> <!-- Only list what you want to change -->
			<facial>valentine_glasses</facial>
		</look>
	</looks>
	
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
		
</item>
