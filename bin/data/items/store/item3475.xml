<item id="3475">
		<type>store</type>
		<subType>general</subType>

	<buttons>
		<btn>
				<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
				<label>FOLLOW</label>
				<actions>
				<action type="activatePower" > <!-- change tracking call -->
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>

	<textfields>
		<text id="storeSubTitle">
			<value>Escape From Pelican Rock</value>
</text>
		<text id="storeTitle">
			<value>Pet Bird Follower</value>
			</text>
	</textfields>
	
	<assets>
		<asset id="cardBack" /><asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
		</assets>

	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
	<specials>
		<specialAbility>follower_prisonbreak_bird</specialAbility>
		</specials>

</item>