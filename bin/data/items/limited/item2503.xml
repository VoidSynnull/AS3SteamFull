<item id="2503"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Barry Costume Card</name> <!-- Change this card name -->
  	<campaignID>CloudyMeatballs2DVDMVU</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Barry Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Barry Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Cloudy with a Chance of Meatballs 2</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Barry Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value></value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0xCB2428</skinColor>
			<facial>ad_cloudy2_barry</facial>
			<hair></hair>
			<shirt></shirt>
			<pants></pants>
			<pack></pack>
			<item></item>
			<overshirt></overshirt>
			<overpants></overpants>
		</look>
	</looks> 
    
</item>
