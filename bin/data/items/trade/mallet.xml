<item id="mallet">
  	<type>island</type>
  	<subType>skullduggery</subType>
  	<buttons>
	    <btn>
	      	<label>USE</label>
	      	<actions>
	    		<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="true"/>
		  			<parameters>
		  				<param id="event">use_mallet</param>
					</parameters>					
				</action>
				<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="false"/>
		  			<parameters>
		  				<param id="event">dont_use_mallet</param>
					</parameters>					
				</action>
			</actions>
	    </btn>
  	</buttons>
  	<textfields>
 		<text>
      		<value>Mallet</value>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/shared/SkullduggeryBackground.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-63</saturation>
     			<hue>-35</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
    <conditionals>
    	<conditional type="inScene">
    		<parameters>
		  		<param id="validScenes">game.scenes.trade.chinaPort.ChinaPort</param>
			</parameters>
    	</conditional>
    </conditionals>
</item>