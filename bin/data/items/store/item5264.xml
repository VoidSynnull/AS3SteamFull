<item id="5264"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="scale">.6</param>
		</parameters>
		<y>-30</y>
	</contentClass>
	
  <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Sanitizer Super Soaker</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<looks>
		<look> <!-- Only list what you want to change -->
			<item>sanitizer_soaker</item>
		</look>
	</looks>

</item>
