<item id="2485"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Brainy Costume Card</name> <!-- Change this card name -->
  	<campaignID>Smurfs2DVDQuest</campaignID> <!-- Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>COSTUMIZE</label>
   			<actions>
				<action type="costumize" tracking="Use Brainy Costume Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Brainy Costume Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>The Smurfs 2</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Brainy Costume</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value></value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<skinColor>0x59B1D8</skinColor>
			<hairColor>0x4A2C17</hairColor>
			<eyeState>open</eyeState> <!-- 1:squint, 2:casual, 3:open -->
			<mouth>16</mouth> <!-- use frame label for numbers after 60 -->
			<marks></marks>
			<facial>ad_john</facial>
			<hair>sponsorsmurfs1</hair>
			<shirt>ad_smurfs2dvd_brainyshirt</shirt>
			<pants>sponsor_smurfs</pants>
			<pack></pack>
			<item></item>
			<overshirt></overshirt>
			<overpants></overpants>
		</look>
	</looks> 
    
</item>
