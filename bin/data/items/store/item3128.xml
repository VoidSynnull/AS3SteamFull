<item id="3128">
	<type>store</type>
	<subType>general</subType>
				<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>


	
	<buttons>
		<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>USE</label>
				<actions>
				<action type="activatePower">
					<parameters>
							<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
	</buttons>
	
	<textfields>
			<text id="storeTitle">
			<value>Atom Power</value>
		</text>
		<text id="storeSubTitle">
			<value>Feel the Power!</value>
			
		</text>
	</textfields>
	
	<assets>
			<asset id="cardBack" />
		</assets>
	
	<specials>
			<specialAbility>atom_power</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility"/>
		</conditionals>
</item>