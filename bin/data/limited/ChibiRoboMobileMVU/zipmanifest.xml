<manifest>
	<!-- campaign xml files -->
	<data type="campaign" path="data/limited/ChibiRoboMobileMVU/" ext="xml">
		<asset>zipmanifest</asset>
		<asset>campaign</asset>
		<asset>version</asset> <!-- remove this is no new code added for this campaign -->
	</data>

	<!-- main street xml files and swfs -->
	<!-- from scene.xml in ad scene plus scene.xml -->
	<data type="game" path="data/limited/ChibiRoboMobileMVU/mainStreet/">
		<asset>scene.xml</asset>
		<asset>hotspots.xml</asset>
		<asset>tracking.xml</asset>
		<asset>custom.xml</asset>
		<asset>dialog.xml</asset>
		<asset>npcs.xml</asset>
		<asset>hits.xml</asset>
	</data>
	<!-- from scene.xml in ad scene -->
	<assets type="game" path="assets/limited/ChibiRoboMobileMVU/mainStreet/">
		<asset>background.swf</asset>
		<asset>interactive.swf</asset>
	</assets>
	
	<assets type="hair" path="assets/entity/character/hair/" prefix="limited_" ext="swf">
		<asset>chibi_robo</asset>
	</assets>
	<assets type="mouth" path="assets/entity/character/mouth/" prefix="limited_" ext="swf">
		<asset>chibi_robo</asset>
	</assets>
	<assets type="pants" path="assets/entity/character/pants/" prefix="limited_" ext="swf">
		<asset>chibi_robo</asset>
	</assets>
	<assets type="shirt" path="assets/entity/character/shirt/" prefix="limited_" ext="swf">
		<asset>chibi_robo</asset>
	</assets>
	
	<assets type="hair" path="data/entity/character/parts/hair/" prefix="limited_" ext="xml">
		<asset>chibi_robo</asset>
	</assets>
	<assets type="mouth" path="data/entity/character/parts/mouth/" prefix="limited_" ext="xml">
		<asset>chibi_robo</asset>
	</assets>
	<assets type="pants" path="data/entity/character/parts/pants/" prefix="limited_" ext="xml">
		<asset>chibi_robo</asset>
	</assets>
	<assets type="shirt" path="data/entity/character/parts/shirt/" prefix="limited_" ext="xml">
		<asset>chibi_robo</asset>
	</assets>
</manifest>