<manifest>
	<!-- campaign xml files -->
	<data type="campaign" path="data/limited/TangledQuest/" ext="xml">
		<asset>zipmanifest</asset>
		<asset>campaign</asset>
	</data>

	<!-- interior xml files and swfs -->
	<!-- from scene.xml in interior scene plus scene.xml -->
	<data type="interior" path="data/scenes/limited/TangledQuest_Interior/">
		<asset>dialog.xml</asset>
		<asset>hits.xml</asset>
		<asset>hotspots.xml</asset>
		<asset>npcs.xml</asset>
		<asset>scene.xml</asset>
		<asset>sounds.xml</asset>
		<asset>tracking.xml</asset>
		<asset>doors.xml</asset>
	</data>
	<!-- from scene.xml in interior scene -->
	<assets type="interior" path="assets/scenes/limited/TangledQuest_Interior/">
		<asset>backdrop.swf</asset>
		<asset>background.swf</asset>
		<asset>interactive.swf</asset>
		<asset>foreground.swf</asset>
	</assets>

	<!-- game xml files and swfs -->
	<!-- from scene.xml in game scene plus scene.xml -->
	<data type="game" path="data/scenes/limited/TangledQuest_Game/">
		<asset>game.xml</asset>
		<asset>dialog.xml</asset>
		<asset>hits.xml</asset>
		<asset>npcs.xml</asset>
		<asset>scene.xml</asset>
		<asset>sounds.xml</asset>
	</data>
	<!-- from scene.xml in game scene -->
	<assets type="game" path="assets/scenes/limited/TangledQuest_Game/">
		<asset>backdrop.swf</asset>
		<asset>background.swf</asset>
		<asset>interactive.swf</asset>
	</assets>

	<!-- popups, followers, bitmap NPCs -->
	<assets type="support" path="assets/limited/TangledQuest/" ext="swf">
		<asset>Start</asset>
		<asset>Win</asset>
		<asset>Lose</asset>
		<asset>maximus</asset>
		<asset>girl</asset>
		<asset>prince</asset>
		<asset>rapunzel</asset>
		<asset>lizard</asset>
	</assets>

	<!-- card xml files, swfs, backs -->
	<data type="card" path="data/items/limited/" prefix="item" ext="xml">
		<asset>2833</asset>
		<asset>2834</asset>
	</data>
	<assets type="card" path="assets/items/limited/" prefix="item" ext="swf">
		<asset>2833</asset>
	</assets>
	<assets type="cardBack" path="assets/items/limited/backs/" ext="swf">
		<asset>AdBackgroundPurple</asset>
	</assets>
	<data type="follower" path="data/entity/character/abilities/limited/" ext="xml">
		<asset>pop_follower_pascal</asset>
	</data>

	<!-- sound assets -->
	<assets type="sounds" path="sound/effects/" ext="mp3" keep="true">
		<asset>ls_concrete_01</asset>
		<asset>ls_concrete_02</asset>
		<asset>fs_concrete_01</asset>
		<asset>fs_concrete_02</asset>
		<asset>fs_concrete_03</asset>
		<asset>fs_concrete_04</asset>
		<asset>rope_strain_01</asset>
		<asset>ls_water_splash_01</asset>
		<asset>ls_water_splash_02</asset>
		<asset>fs_water_01</asset>
		<asset>fs_water_02</asset>
		<asset>fs_water_03</asset>
		<asset>fs_water_04</asset>
	</assets>
	<assets type="sounds" path="sound/music/" ext="mp3" keep="true">
		<asset>apollo_flute</asset>
		<asset>collection_game</asset>
	</assets>

		<!-- avatar parts -->
	<data type="facial" path="data/entity/character/parts/facial/" prefix="limited_" ext="xml">
		<asset>pascal</asset>
	</data>
	<assets type="facial" path="assets/entity/character/facial/" prefix="limited_" ext="swf">
		<asset>pascal</asset>
	</assets>
	<data type="hair" path="data/entity/character/parts/hair/" prefix="limited_" ext="xml">
		<asset>rapunzelhair1</asset>
		<asset>rapunzelhair2</asset>
		<asset>rapunzelhair3</asset>
	</data>
	<assets type="hair" path="assets/entity/character/hair/" prefix="limited_" ext="swf">
		<asset>rapunzelhair1</asset>
		<asset>rapunzelhair2</asset>
		<asset>rapunzelhair3</asset>
	</assets>
	<data type="pack" path="data/entity/character/parts/pack/" prefix="limited_" ext="xml">
		<asset>pascal</asset>
	</data>
	<assets type="pack" path="assets/entity/character/pack/" prefix="limited_" ext="swf">
		<asset>pascal</asset>
	</assets>
	<data type="overshirt" path="data/entity/character/parts/overshirt/" prefix="limited_" ext="xml">
		<asset>pascal</asset>
	</data>
	<assets type="overshirt" path="assets/entity/character/overshirt/" prefix="limited_" ext="swf">
		<asset>pascal</asset>
