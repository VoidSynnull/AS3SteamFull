<item id="5266"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
  	</buttons>
	<radiobuttons>
		<btn>
			<color>0xd89664</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xfe6768</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0xff9248</color>
			<val>2</val>
		</btn>
	</radiobuttons>
  	<textfields>
		<text id="storeTitle">
			<value>Popsicles</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<looks>
		<look>
			<item>jun_member_popsicle3</item>
		</look>
		<look>
			<item>jun_member_popsicle2</item>
		</look>
		<look>
			<item>jun_member_popsicle1</item>
		</look>
	</looks>

</item>
