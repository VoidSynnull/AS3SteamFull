<item id="5267"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
	<buttons>
  		<btn>
  			<index>0</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="storeTitle">
			<value>Drone Flying Follower</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
		<!--<asset id="cardContent" />-->
	</assets>

	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
 	<specials>
		<specialAbility>follower_flying_drone</specialAbility>	
	</specials>

</item>
