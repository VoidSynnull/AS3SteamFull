<item id="3086">
	<type>store</type>
	<subType>general</subType>
	<buttons>
		<btn>
		<conditional id="hasAbility" isTrue="false"/>
			<label>SNOW</label>
			<actions>
			<action type="activatePower">
				<parameters>
					<param id="trigger">true</param>
					<param id="perm">false</param>
				</parameters>
			</action>
		</actions>
		</btn>
		<btn>
			<conditional id="hasAbility" isTrue="true"/>
			<label>TURN OFF</label>
			<actions>
			<action type="deactivatePower"/>
		</actions>
		</btn>
	</buttons>
	<textfields>
		<text id="storeTitle">
			<value>Snow Fall</value>
		</text>
		<text id="storeSubTitle">
			<value>Let it Snow!</value>
		 </text>
	</textfields>
	<assets>
		<asset id="cardBack" /><asset id="cardContent"/>
	</assets>
		
 	<specials>
			<specialAbility>snow</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
