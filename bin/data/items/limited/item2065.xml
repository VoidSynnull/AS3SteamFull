<item id="2065"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Clifford Paw Prints</name> <!-- *** Change this card name -->
  	<campaignID>CliffordQuest</campaignID> <!-- *** Change this CMS name -->
	
  	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>GET TICKETS</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
		
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Clifford</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Paw Prints</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Press ACTION button to place a print!</web>
			<mobile>Press ACTION button to place a print!</mobile>
			<y>66</y>
		</text>
  	</textfields>
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background zip -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.zip -->
  	</assets>
  	
		<looks>
			<look>
				<item>limited_paw_print</item>
			</look>
		</looks>
</item>
