<item id="archipelagoMap">  <!-- coding example in backlot, check BacklotEvent.as, MainStreet.as, screenplayPages.xml -->
  	<type>island</type>
  	<subType>skullduggery</subType>
  	<buttons>
	    <btn>
	      	<conditional id="has_all" isTrue="true"/>
    		<label>EXAMINE</label>
    		<actions>
	    		<action type="openPopup">
		  			<parameters>
		  				<param id="className">game.scenes.trade.shared.popups.ArchipelagoMap</param>
					</parameters>
				</action>
			</actions>
	    </btn>
  	</buttons>
  	<textfields>
 		<text>
      		<value>Skullduggery Archipelago Map</value>
    	</text>
    	<text>
      		<value>When assembled, this map reveals a secret island!</value>
      		<size>18</size>
      		<y>90</y>
      		<width>210</width>
      		<textColor>0x606060</textColor>
      	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/shared/SkullduggeryBackground.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-44</saturation>
     			<hue>9</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent">
			<conditional id="has_one" isTrue="true"/>
			<assetPath>items/skullduggery/archipelagoMapPiece1.swf</assetPath>
		</asset>
		<asset id="cardContent">
			<conditional id="has_two" isTrue="true"/>
			<assetPath>items/skullduggery/archipelagoMapPiece2.swf</assetPath>
		</asset>
		<asset id="cardContent">
			<conditional id="has_three" isTrue="true"/>
			<assetPath>items/skullduggery/archipelagoMapPiece3.swf</assetPath>
		</asset>
		<asset id="cardContent">
			<conditional id="has_four" isTrue="true"/>
			<assetPath>items/skullduggery/archipelagoMapPiece4.swf</assetPath>
		</asset>
		<asset id="cardContent">
			<conditional id="has_five" isTrue="true"/>
			<assetPath>items/skullduggery/archipelagoMapPiece5.swf</assetPath>
		</asset>
    </assets>
    <conditionals>
    	<conditional type="checkEvents" id="has_all">
    		<parameters>
		  		<param id="event">found_map_pieces</param>
			</parameters>
    	</conditional>
    	<conditional type="checkEvents" id="has_one">
    		<parameters>
		  		<param id="event">found_map_one</param>
			</parameters>
    	</conditional>
    	<conditional type="checkEvents" id="has_two">
    		<parameters>
		  		<param id="event">found_map_two</param>
			</parameters>
    	</conditional>
    	<conditional type="checkEvents" id="has_three">
    		<parameters>
		  		<param id="event">found_map_three</param>
			</parameters>
    	</conditional>
    	<conditional type="checkEvents" id="has_four">
    		<parameters>
		  		<param id="event">found_map_four</param>
			</parameters>
    	</conditional>
    	<conditional type="checkEvents" id="has_five">
    		<parameters>
		  		<param id="event">found_map_five</param>
			</parameters>
    	</conditional>
    </conditionals>
</item>