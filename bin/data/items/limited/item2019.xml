<item id="2019"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>CareBear Follower</name> <!-- *** Change this card name -->
  	<campaignID>AmericanGirlQuest</campaignID> <!-- *** Change this CMS name -->
	
	
  	<buttons>
	<btn>
			<index>1</index>
			<conditional id="hasAbility" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="deactivatePower"/>
			</actions>
		</btn>
		<btn>
			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
			<label>FOLLOW</label>
			<actions>
				<action type="activatePower" tracking="true">
					<parameters>
						<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
		</btn>
		
		<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>American Girl</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Care Bear Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<!-- 
		<text id="memberinstructions"> 
			<value>Press SPACEBAR to use the power!</value>
			<web>click balloon to change characters!</web>
			<mobile>tap balloon to change characters!</mobile>
			<y>115</y>
		</text> -->
		<text id="copyright">
			<value>Care Bears™ and related trademarks: TM & © 2020 TCFC, LLC.</value> 
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPink.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" />
  	</assets>
  	
  	<specials>
		<specialAbility>limited/pop_follower_carebear</specialAbility>
	</specials>
	
	
	<conditionals>
		<conditional type="hasAbility"/>
	</conditionals>
</item>