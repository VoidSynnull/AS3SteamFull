<item id="3075">
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar with instruct -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="clickableSpecial">true</param>
		</parameters>
	</contentClass>
 	
		<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>CREATE</label>
				<actions>
				<action type="activatePower">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>REMOVE</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
		
		<textfields>
			<text id="storeSubTitle">
					<value>Followers</value>
	 	 	</text>
			<text id="storeTitle">
					<value>Spook Pack</value>
	 	 	</text>
	 	 	<text id="storeInstructions">
				<web>Click on the follower to&#10;change your selection.</web>
				<mobile>Tap on the follower to&#10;change your selection.</mobile>
			</text>
		</textfields>
		<assets>
		<asset id="cardBack" />
		</assets>
		
 	<specials>
			<specialAbility>follower_spook_1</specialAbility>
			<specialAbility>follower_spook_2</specialAbility>
			<specialAbility>follower_spook_3</specialAbility>
			<specialAbility>follower_spook_4</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
