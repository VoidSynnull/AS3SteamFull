<item id="treasureMap">  <!-- coding example in mythology, check Scroll.as, zeusScroll.xml -->
  	<type>island</type>
  	<subType>skullduggery</subType>
  	<buttons>
	    <btn>
	      	<label>EXAMINE</label>
	      	<actions>
				<action type="openPopup">
			  		<parameters>
			  			<param id="className">game.scenes.trade.shared.popups.TreasureMap</param>
					</parameters>
				</action>
			</actions>
	    </btn>
  	</buttons>
  	<textfields>
 		<text>
      		<value>Treasure Map</value>
    	</text>
    	<text>
      		<value>This map shows the location of a hidden treasure.</value>
      		<size>18</size>
      		<y>90</y>
      		<width>190</width>
      		<textColor>0x606060</textColor>
      	</text>    	
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/shared/SkullduggeryBackground.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-57</saturation>
     			<hue>-2</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
</item>