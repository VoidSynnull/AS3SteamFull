<item id="2036"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Wombats</name> <!-- *** Change this card name -->
  	<campaignID>AmericanGirlQuest</campaignID> <!-- *** Change this CMS name -->
	
   <contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
	<radiobuttons>
		<btn>
			<color>0xFFC0CB</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0x0000ff</color>
			<val>1</val>
		</btn>
	</radiobuttons>
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>American Girl</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Wombat Pair</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<!-- <asset id="cardContent" />  -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<looks>
	    <look>
			<item>limited_wombat_daisy</item>
		</look>
		<look>
			<item>limited_wombat_boomer</item>
		</look>
	</looks> 
    
</item>
