<item id="3673">
	<type>store</type>
	<subType>general</subType>
		
	<contentClass>
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="scale">0.6</param>
			<param id="forceScale">true</param>
		</parameters>
	</contentClass>
	
	<buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
		
		<textfields>
			<text id="storeTitle">
				<value>Poptropica's 12th Birthday</value>
			</text>
	</textfields>
	
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<looks>
		<look>
			<overshirt>cake_car</overshirt>
		</look>
	</looks> 

	
</item>