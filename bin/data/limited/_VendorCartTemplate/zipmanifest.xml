<manifest>
	<!-- campaign xml files -->
	<data type="campaign" path="data/limited/CampaignMVU/" ext="xml">
		<asset>zipmanifest</asset>
		<asset>version</asset>
	</data>

	<!-- main street xml files and swfs -->
	<!-- from scene.xml in ad scene plus scene.xml -->
	<data type="game" path="data/limited/CampaignMVU/" ext="xml">
		<asset>custom</asset>
		<asset>dialog</asset>
		<asset>hits</asset>
		<asset>hotspots</asset>
		<asset>npcsl</asset>
		<asset>scene</asset>
		<asset>tracking</asset>
	</data>
	<!-- from scene.xml in ad scene -->
	<assets type="game" path="assets/limited/CampaignMVU/" ext="swf">
		<asset>background</asset>
		<asset>interactive</asset>
	</assets>
	
	<!-- followers -->
	<data type="follower" path="data/entity/character/abilities/limited/" ext="xml">
		<asset>pop_follower_id</asset>
	</data>

	<!-- bitmap npcs -->
	<assets type="game" path="assets/limited/CampaignMVU/" ext="swf">
		<asset>bitmap_npc</asset>
	</assets>

	<!-- card xml files, swfs, backs -->
