<item id="2822"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Lego Sledgehammer Card</name> <!-- Change this card name -->
  	<campaignID>LegoFriendsVendorCart</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Lego Sledgehammer Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT SITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Lego Sledgehammer Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Lego Friends</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Sledgehammer</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		 <asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_sledgehammer</item>
		</look>
	</looks> 
</item>
