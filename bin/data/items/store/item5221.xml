<item id="5221"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
  	<campaignID>MemberGift</campaignID>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
  		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Soft Serve"/>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
	<radiobuttons>
		<btn>
			<color>0x986A56</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xFFF8D7</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0xFFAAC0</color>
			<val>2</val>
		</btn>
	</radiobuttons>
	
  	<textfields>
		<text id="storeSubTitle">
			<value>Member Gift</value>
		</text>
		<text id="storeTitle">
			<value>Soft Serve</value>
		</text>
		<text id="storeInstructions">
			<web>Tap space bar to lick</web>
			<mobile>Tap ACTION to lick</mobile>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>

	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<looks>
		<look>
			<item>june_icecream_chocolate</item>
		</look>
		<look>
			<item>june_icecream_vanilla</item>
		</look>
		<look>
			<item>june_icecream_strawberry</item>
		</look>
	</looks> 

</item>
