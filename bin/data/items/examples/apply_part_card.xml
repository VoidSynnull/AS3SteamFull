<item id="apply_part_card"> <!-- Make sure the id name is the same as your .xml and the .swf art you want to load on the card -->
	<type>island</type>
	<subType>examples</subType> <!-- Set subType to the location of card .swf art - bin/assets/items/"folder" -->

	<textfields>
	 	<text id="title">
      		<value>Apply Part Item</value>
    	</text>
    	<text>
      		<value>This is a description of the item.</value>
      		<size>18</size>
      		<y>95</y>
    	</text>
  	</textfields>
	
	<assets>
  		<asset id="cardBack">
		<!-- Instead of the "shared" folder, you can also put the island card "background.swf" art inside the island folder you are using for all the other cards. EX - "items/"island_name"/background.swf" -->
			<assetPath>items/shared/EarlyBackground.swf</assetPath>
			<!-- These effect settings change the color of the background card, you get the numbers from Flash's "Adjust Color" filter -->
			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>36</brightness>
     			<contrast>-17</contrast>
     			<saturation>9</saturation>
     			<hue>12</hue>
    		</effect>
	    	</asset>
	    	<asset id="cardContent"/>
    </assets>
	
	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook">
					<!--  If you don't want the look applied permanently add a param specifying false, true is the default. -->
					<parameters>
						<param id="isPermanent">false</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	
    <looks>
	    <look>
		 	<facial>rabbitcon2</facial>
	   	</look> 
	</looks> 

     <conditionals>
    	<conditional type="hasLook" />	<!-- if no lookId param is given uses first look by default -->
    </conditionals>
    
</item>