		<text id="adtitle">
			<value></value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
  	</textfields>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<value>anyLook</value>
	
	<assets>
  		<asset id="cardBack">
