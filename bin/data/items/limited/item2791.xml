<item id="2791"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Max Crumbly Hero Card</name> <!-- Change this card name -->
  	<campaignID>MaxCrumblyHeroIC</campaignID> <!-- Change this CMS name -->	
 
<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Max Crumbly Hero Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Max Crumbly Hero Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>The Misadventures of Max Crumbly</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Hero Power!</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value></value> <!-- Change or delete this copyright -->
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	
		<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_maxc_comicbook</item>
		</look>
	</looks> 
</item>
