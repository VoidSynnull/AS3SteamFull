<item id="3070">
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="scale">0.25</param>
			<param id="forceScale">true</param>
		</parameters>
	</contentClass>

	<buttons>
		<btn>
		<conditional id="hasAbility" isTrue="false"/>
			<label>USE</label>
			<actions>
			<action type="activatePower">
				<parameters>
							<param id="trigger">true</param>
				</parameters>
			</action>
		</actions>
		</btn>
		<btn>
			<conditional id="hasAbility" isTrue="true"/>
			<label>TURN OFF</label>
			<actions>
			<action type="deactivatePower"/>
		</actions>
		</btn>
	</buttons>
		
	<textfields>
		<text id="storeSubTitle">
			<value>It's a small world after all.</value>
		</text>
		<text id="storeTitle">
			<value>Minimizer</value>
		</text>
	</textfields>
		
	<assets>
		<asset id="cardBack" />
	</assets>

	<specials>
		<specialAbility>shrink</specialAbility>
	</specials>
	
	<conditionals>
		<conditional type="hasAbility" />
	</conditionals>
		
</item>
