<item id="2884"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Lucky Gum Card</name> <!-- *** Change this card name -->
  	<campaignID>March2018Prizes</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
   		<btn>
  			<index>0</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>CHEW</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  	<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>0</index>
  			<conditional id="hasAbility" isTrue="true"/>
    		<label>STOP CHEWING</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>THIS WEEK ONLY</value>
		</text>
		<text id="subtitle">
			<value>March Prizes</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Lucky PopGum</value> <!-- Change this title -->
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Spacebar tap to blow bubbles</web>
			<y>115</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item9999.swf -->
  	</assets>
  	
 	<specials>
	    <specialAbility>gum_shamrock</specialAbility>
	</specials>
	
	<conditionals>
    	<conditional type="hasAbility"/>
    </conditionals>
</item>
