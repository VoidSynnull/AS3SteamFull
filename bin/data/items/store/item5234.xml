<item id="5234"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
			<parameters>
				<param id="hidePlayer">true</param>
			</parameters>
			<x>100</x>
			<y>60</y>
	</contentClass>
	
	<buttons>
			<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>FOLLOW</label>
				<actions>
				<action type="activatePower">
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
				<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
		</buttons>
	<textfields>
		<text id="storeTitle">
			<value>Bat Attack!</value>
		 </text>
		 <text id="storeInstructions">
			<web>Tap space bar to swarm!</web>
			<mobile>Tap ACTION to swarm!</mobile>
		</text>
	</textfields>
	<assets>
		<asset id="cardBack" />
		<asset id="cardContent"/>
	</assets>
		
	<specials>
		<specialAbility>follower_bat</specialAbility>
	</specials>
	
	<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
</item>
