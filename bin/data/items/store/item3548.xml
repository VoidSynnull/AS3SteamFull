<item id="3548"> <!-- Halloween Dog Pack -->
	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar  -->
		<className>game.ui.card.CharacterContentView</className>
		<x>40</x>
	</contentClass>
	
	<radiobuttons>
		<btn>
			<color>0x6F5C3F</color>
			<val>pop_follower_halloween_dog_1</val>
		</btn>
		<btn>
			<color>0x9F4243</color>
			<val>pop_follower_halloween_dog_2</val>
		</btn>
		<btn>
			<color>0x43519C</color>
			<val>pop_follower_halloween_dog_3</val>
		</btn>
	</radiobuttons>
	
	<buttons>
		<btn>
			<conditional id="hasAbility" isTrue="false"/>
				<label>FOLLOW</label>
				<actions>
				<action type="activatePower"> <!-- change tracking call -->
					<parameters>
								<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
			</btn>
			<btn>
 			<conditional id="hasAbility" isTrue="true"/>
				<label>TURN OFF</label>
				<actions>
				<action type="deactivatePower"/>
			</actions>
			</btn>
	</buttons>
	
	<textfields>
		<text id="storeSubTitle">
			<value>Dogs are here!</value>
		</text>
		<text id="storeTitle">
			<value>Dog Pack</value>
			</text>
		<text id="storeInstructions">
			<web>Click to pick a furry follower!</web>
			<mobile>Tap to pick a furry follower!</mobile>
		</text>
	</textfields>
	
		<assets>			<asset id="cardBack" />
		</assets>
		
		<conditionals>
			<conditional type="hasAbility" />
		</conditionals>
		
		<specials>
			<specialAbility>pop_follower_halloween_dog_1</specialAbility>
	</specials>
</item>