<item id="2468">
  	<type>custom</type>
	<subType>general</subType>
	<name>BabyMouse Power Card</name>
  	<campaignID>BabyMouseEC</campaignID>
	
  	<buttons>
  		<btn>
  			<index>1</index>
    		<label>USE</label>
    		<actions>
				<action type="openPopup" tracking="Use BabyMouse Power Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="className">game.scenes.custom.CardAnimPower</param>
	  					<param id="swfPath">BabyMouseEC/BabymousePower.swf</param> <!-- location of swf in assets/limited -->
