<item id="3450">
		<type>store</type>
		<subType>general</subType>


	<buttons>
			<btn>
				<index>0</index>
 			
				<label>TURN OFF</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
		
			<btn>
			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		</buttons>

 	<textfields>
		<text id="storeTitle">
			<value>Fart Gun</value>
		</text>
			<text id="storeInstructions">
				<web>Tap space bar to fire!</web>
				<mobile>Tap ACTION to fire!</mobile>
			</text>
	</textfields>
	
	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
	
	<assets>
		<asset id="cardBack" /><asset id="cardContent" />
		</assets>

		<looks>
			<look>
			<item>stor_fartgun</item>
		</look>
	</looks> 

</item>