<item id="2729"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Food Craving Wishlist Card</name> <!-- Change this card name -->
  	<campaignID>PopFoodCravingWishlist</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>0</index>
    		<label>Share & Save</label>
   			<actions>
				<action type="openPopup" tracking="Use Food Craving Wishlist Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="className">game.scenes.custom.WishlistPopup</param>
	  					<param id="swfPath">PopFoodCravingWishlist/wishlist.swf</param> <!-- location of swf in assets/limited -->
						<param id="saveToggleButtons">true</param>
						<param id="trackToggleButtons">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Poptropica</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Food Craving Wishlist</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
    
</item>
