<item id="2087"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Christmas Mall Santa</name> <!-- *** Change this card name -->
  	<campaignID>ChristmasAgainVBB</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
			<btn>
				<index>1</index>
				<label>COSTUMIZE</label>
				<actions>
					<action type="costumize" tracking="true" />
				</actions>
			</btn>
			<btn>
				<index>1</index>
				<conditional id="hasLook" isTrue="true"/>
				<label>PUT AWAY</label>
				<actions>
					<action type="removeLook"/>
				</actions>
			</btn>
    	<btn>
    		<index>0</index>
				<label>VISIT WEBSITE</label>
				<actions>
					<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Disney's Christmas…Again?!</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Mall Santa Suit</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press action button to make it snow!</value>
			<web>Press action button to make it snow!</web>
			<mobile>Press action button to make it snow!</mobile>
			<y>66</y>
		</text>
		<text id="copyright">
			<value></value> <!-- Change or delete this copyright <value>© 2021 McDonald’s. © 2021 WBEI</value> -->
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack">
			<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background zip -->
		</asset>
		<asset id="cardContent" />
	</assets>
	<looks>
		<look>
			<pants>limited_mall_santa</pants>
			<shirt>limited_mall_santa</shirt>
			<hair>limited_mall_santa</hair>
			<facial>limited_mall_santa</facial>
		</look>
	</looks>
</item>
