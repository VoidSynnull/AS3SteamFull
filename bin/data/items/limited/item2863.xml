<item id="2863"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>BB-8 Follower Card</name> <!-- Change this card name -->
  	<campaignID>StarWarsLastJediMVU1</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="Use BB-8 Follower Card"> <!-- change tracking call -->
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="BB-8 Follower Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Star Wars - The Last Jedi</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>BB-8 Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Click on BB-8 to Activate</value>
			<y>66</y>
		</text>
 	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundRed.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
 	<specials>
		<specialAbility>limited/pop_follower_sw_bb8</specialAbility>	
	</specials>
</item>
