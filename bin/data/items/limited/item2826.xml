<item id="2826"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Trolls Hair Card</name> <!-- Change this card name -->
  	<campaignID>TrollsPartyRoom</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
 		<btn>
  			<index>1</index>
    		<label>PUT AWAY</label>
  			<conditional id="hasLook" isTrue="true"/>
  			<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
 		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Trolls Hair Card"/> <!-- change tracking call -->
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT SITE</label>
      		<actions>
				<action type="gotoUrl" tracking="Trolls Hair Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Trolls</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Hair Whip</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<value>Press SPACEBAR to Whip your hair!</value>
			<y>66</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPurple.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
    
	<conditionals>
    	<conditional type="hasLook" />
	</conditionals>

  	<looks>
	    <look> <!-- Only list what you want to change -->
			<hair>limited_trolls_whip_hair</hair>
		</look>
	</looks> 
</item>
