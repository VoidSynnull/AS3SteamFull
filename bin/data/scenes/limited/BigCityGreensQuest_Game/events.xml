			<param1 id="action">talk</param1>
			<param2 id="npcID">Cricket</param2>
			<param3 id="sayID">wingame</param3>
		</event>
		<event>
			<param1 id="action">setCameraTarget</param1>
			<param2 id="npcID">player</param2>
		</event>
		<event>
			<param1 id="action">hide</param1>
			<param2 id="npcID">Cricket</param2>
		</event>
		<event>
			<param1 id="action">show</param1>
			<param2 id="npcID">Cricket2</param2>
		</event>
		<event>
			<param1 id="action">unlockInput</param1>
		</event>
	</group>	
	<group type="triggered" id="restartGame">
		<event>
			<param1 id="action">hide</param1>
			<param2 id="npcID">Cricket2</param2>
		</event>
		<event>
			<param1 id="action">show</param1>
