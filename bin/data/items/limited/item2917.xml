<item id="2917"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>LegoStarwarsStarFighter</name> <!-- *** Change this card name -->
  	<campaignID>LegoStarwarsMMSQ</campaignID> <!-- *** Change this CMS name -->
	<contentClass>
		<className>game.ui.card.CharacterContentView</className>
		<parameters>
			<param id="clickableSpecial">true</param>
		</parameters>
		 <y>-15</y>
		 <x>65</x><!-- to account for how wide the followers are -->
	</contentClass>
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>FOLLOW</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>LEGO® Star Wars™</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Spaceship Follower</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="copyright">
			<value>© Lego.</value> <!-- Change or delete this copyright -->
		</text>
		<text id="memberinstructions">
		  <value>Click on the follower to change your spaceship.</value>
		  <y>50</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundBlue.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
    <specials>
		<specialAbility>limited/follower_starfighter</specialAbility>
		<specialAbility>limited/follower_xwing</specialAbility>
	</specials>
</item>
