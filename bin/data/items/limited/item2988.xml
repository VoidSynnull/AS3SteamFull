<item id="2988"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>SpyCar</name> <!-- *** Change this card name -->
  	<campaignID>FastFuriousQuest</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
   		<btn>
  			<index>0</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
		<btn>
  			<index>0</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Tony's Car</value> <!-- Change this subtitle -->
			<y>-210</y>
		</text>
		<text id="adtitle">
			<value>Fast & Furious: Spy Racers</value>
			<size>23</size>
			<y>-180</y>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-155</y>
		</text>
		<text id="memberinstructions"> <!-- Change any member instructions -->
			<web>Tap space bar to catch a ride!</web>
			<mobile>Press action button to catch a ride!</mobile>
			<y>90</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
    	<asset id="cardContent" />
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look>
			<item>limited_fastfurious_keys</item>
		</look>
	</looks> 
</item>
