<item id="2035"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Belt and Sash</name> <!-- *** Change this card name -->
  	<campaignID>Croods2MMSQ</campaignID> <!-- *** Change this CMS name -->
	
    <contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="true" />
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
  	
  	<radiobuttons> <!-- Change button colors -->
		<btn>
			<color>0x9B6FC6</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xFF669C</color>
			<val>1</val>
		</btn>
	</radiobuttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Croods: A New Age</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>Belt & Sash</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
		<text id="memberinstructions">
			<web>Tap space bar to see them peek!</web>
			<mobile>Press action button to see them peek!</mobile>
			<y>60</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<!-- <asset id="cardContent" />  -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
  	<looks>
	    <look>
			<overpants>limited_belt_sloth</overpants>
		</look>
		<look>
			<overpants>limited_sash_sloth</overpants>
		</look>
	</looks> 
    
</item>
