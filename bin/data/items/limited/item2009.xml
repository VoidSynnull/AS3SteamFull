<item id="2009"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>GHDBooks</name> <!-- *** Change this card name -->
  	<campaignID>GHDAutocard</campaignID> <!-- *** Change this CMS name -->
	
  	<contentClass> <!-- This displays avatar -->
  		<className>game.ui.card.CharacterContentView</className>
  	</contentClass>
	
  	<buttons>
  		<btn>
				<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
				<label>USE</label>
				<actions>
				<action type="applyLook" /> <!-- change tracking call -->
			</actions>
			</btn>
			<btn>
				<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
				<label>PUT AWAY</label>
				<actions>
				<action type="removeLook"/>
			</actions>
			</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	
	<radiobuttons> <!-- Change button colors -->
		<btn>
			<color>0x873949</color>
			<y>20</y>
			<x>-40</x>
			<val>0</val>
		</btn>
		<btn>
			<color>0xb9c346</color>
				<y>20</y>
				<x>1</x>
			<val>1</val>
		</btn>
		<btn>
			<color>0x1a91b2</color>
				<y>20</y>
				<x>40</x>
			<val>2</val>
		</btn>
	</radiobuttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="subtitle">
			<value>Galactic Hot Dogs</value> <!-- Change this subtitle -->
		</text>
		<text id="adtitle">
			<value>The Series</value> <!-- Change this title -->
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundGreen.swf</assetPath> <!-- Change this background swf -->
    	</asset>
  	</assets>
  	<conditionals>
			<conditional type="hasLook" />
		</conditionals>
    
  	<looks>
	    <look>
			<item>limited_galactic_book1</item>
		</look>
		<look>
			<item>limited_galactic_book3</item>
		</look>
		<look>
			<item>limited_galactic_book2</item>
		</look>
	</looks> 
</item>
