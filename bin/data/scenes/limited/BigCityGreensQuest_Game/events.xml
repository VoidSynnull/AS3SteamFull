		<event>
			<param1 id="action">hide</param1>
			<param2 id="npcID">Cricket2</param2>
		</event>
		<event>
			<param1 id="action">talk</param1>
			<param2 id="npcID">Bill</param2>
			<param3 id="sayID">init</param3>
		</event>
		<event>
			<param1 id="action">talk</param1>
			<param2 id="npcID">Cricket</param2>
