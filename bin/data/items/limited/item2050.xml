<item id="2050"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Bugs Bunny Follower Card</name> <!-- *** Change this card name -->
  	<campaignID>SpaceJamAutoCard</campaignID> <!-- *** Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasAbility" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="activatePower" tracking="true">
					<parameters>
					  		<param id="trigger">true</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
  			<index>1</index>
 			<conditional id="hasAbility" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="deactivatePower"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>VISIT WEBSITE</label>
      		<actions>
				<action type="gotoUrl" tracking="true" />
	  		</actions>
    	</btn>
  	</buttons>
	<!-- removing lola as an option
	<radiobuttons>
		<btn>
			<color>0x9B6FC6</color>
			<val>limited/pop_follower_space_jam_bugs</val>
		</btn>
		<btn>
			<color>0xFF669C</color>
			<val>limited/pop_follower_space_jam_lola</val>
		</btn>
	</radiobuttons>
	-->
  	<textfields>
			<text id="limited">
				<value>FOR A LIMITED TIME ONLY</value>
			</text>
			<text id="subtitle">
				<value>Space Jam: A New Legacy</value> <!-- Change this subtitle -->
			</text>
			<text id="adtitle">
				<value>Bugs Bunny Follower</value> <!-- Change this title -->
			</text>
			<text id="ad">
				<value>ADVERTISEMENT</value>
			</text>
			<text id="copyright">
				<value>© 2021 McDonald's  © 2021 WBEI. RATED PG</value> <!-- Change or delete this copyright <value>© 2021 McDonald’s. © 2021 WBEI</value> -->
			</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundOrange.swf</assetPath> <!-- Change this background swf -->
    	</asset>
		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
  	</assets>
  	
	<conditionals>
    	<conditional type="hasAbility" />
    </conditionals>
    
 	<specials>
		<specialAbility>limited/pop_follower_space_jam_bugs</specialAbility>
		<specialAbility>limited/pop_follower_space_jam_lola</specialAbility>
	</specials>
</item>
