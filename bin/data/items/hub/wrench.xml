<item id="wrench">
	<type>island</type>
	<subType>hub</subType>
	
	<textfields>
 		<text>
      		<value>Wrench</value>
    	</text>
    	<text>
      		<value>I have this gut-wrenching feeling&#10;that this won't fix the plane...</value>
      		<size>18</size>
      		<y>90</y>
    	</text>
  	</textfields>
	
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/shared/EarlyBackground.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-100</saturation>
     			<hue>0</hue>
    		</effect>
	    </asset>
	    <asset id="cardContent"/>
    </assets>
    
    <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>EQUIP</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>UNEQUIP</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
  	
  	  <looks>
	    <look>
		 	<item>wrench</item>
	   	</look> 
	</looks> 
	
	<conditionals>
    	<conditional type="hasLook" />	<!-- if no lookId param is given uses first look by default -->
    </conditionals>
  	
</item>