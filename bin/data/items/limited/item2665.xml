<item id="2665"> <!-- Change this card ID -->
  	<type>custom</type>
	<subType>general</subType>
	<name>Whatever After Magic Mirror Card</name> <!-- Change this card name -->
  	<campaignID>WMIC</campaignID> <!-- Change this CMS name -->
	
  	<buttons>
  		<btn>
  			<index>1</index>
			<conditional id="hasLook" isTrue="false"/>
    		<label>USE</label>
    		<actions>
				<action type="applyLook" tracking="Use Whatever After Magic Mirror Card" /> <!-- change tracking call -->
			</actions>
  		</btn>
		<btn>
  			<index>1</index>
 			<conditional id="hasLook" isTrue="true"/>
    		<label>TURN OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
    	<btn>
    		<index>0</index>
      		<label>DRESS-UP GAME</label>
			 <textSize>14</textSize>
      		<actions>
				<action type="gotoUrl" tracking="Whatever After Magic Mirror Card"> <!-- change tracking call -->
	  				<parameters>
	  					<param id="urlId">url1</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
  	</buttons>
	
  	<textfields>
		<text id="limited">
			<value>FOR A LIMITED TIME ONLY</value>
		</text>
		<text id="adtitle">
			<value>Magic Mirror</value> <!-- Change this title -->
			<y>-170</y>
		</text>
		<text id="ad">
			<value>ADVERTISEMENT</value>
			<y>-145</y>
		</text>
  	</textfields>
	
  	<assets>
		<asset id="cardBack">
    		<assetPath>items/limited/backs/AdBackgroundPink.swf</assetPath> <!-- Change this background swf -->
    	</asset>
 		<asset id="cardContent" /> <!-- Will use content bin/assets/items/limited/item999.swf -->
 	</assets>
  	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
    
  	<looks>
	    <look> <!-- Only list what you want to change -->
			<item>limited_whatever_mirror</item>
		</look>
	</looks> 
</item>