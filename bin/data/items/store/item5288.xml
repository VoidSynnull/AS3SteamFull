<item id="5288"> <!-- Change this card ID -->
  	<type>store</type>
	<subType>general</subType>
	
	<contentClass> <!-- This displays avatar -->
		<className>game.ui.card.CharacterContentView</className>
	</contentClass>
	
  <buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
			<label>USE</label>
			<actions>
				<action type="applyLook"/>
			</actions>
		</btn>
		<btn>
			<conditional id="hasLook" isTrue="true"/>
			<label>PUT AWAY</label>
			<actions>
				<action type="removeLook"/>
			</actions>
		</btn>
  	</buttons>
	<radiobuttons>
		<btn>
			<color>0xc61342</color>
			<val>0</val>
		</btn>
		<btn>
			<color>0xdb3266</color>
			<val>1</val>
		</btn>
		<btn>
			<color>0xfccf1a</color>
			<val>2</val>
		</btn>
	 </radiobuttons>
  	<textfields>
		<text id="storeTitle">
			<value>Sweet Sanitizers</value>
		</text>
  	</textfields>
	
	<assets>
		<asset id="cardBack" />
	</assets>
		
	<conditionals>
		<conditional type="hasLook"/>
	</conditionals>
	
	<looks>
		<look> <!-- Only list what you want to change -->
			 <overpants>mem_strawberry_sani</overpants>
		</look>
		<look> <!-- Only list what you want to change -->
			 <overpants>mem_watermelon_sani</overpants>
		</look>
		<look> <!-- Only list what you want to change -->
			 <overpants>mem_pineapple_sani</overpants>
		</look>
	</looks>

</item>
